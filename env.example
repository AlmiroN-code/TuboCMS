# Пример файла переменных окружения
# Скопируйте этот файл в .env и настройте под ваши нужды

# Основные настройки
DEBUG=False
SECRET_KEY=your-secret-key-here-change-this-in-production

# Разрешенные хосты (через запятую)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost,127.0.0.1

# База данных PostgreSQL
DB_NAME=django_db
DB_USER=django
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432

# Redis для кеша и Celery
REDIS_URL=redis://127.0.0.1:6379/1
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email настройки
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Настройки файлов
FILE_UPLOAD_MAX_MEMORY_SIZE=524288000
DATA_UPLOAD_MAX_MEMORY_SIZE=524288000

# Настройки видео
VIDEO_MAX_SIZE=524288000
VIDEO_ALLOWED_FORMATS=mp4,avi,mov,wmv,flv,webm
VIDEO_PREVIEW_DURATION=12
VIDEO_PREVIEW_SEGMENTS=6

# FFmpeg пути (если установлены в нестандартных местах)
FFMPEG_PATH=ffmpeg
FFPROBE_PATH=ffprobe