{% extends 'base.html.twig' %}

{% set breadcrumbs = [
    {'label': 'breadcrumb.home'|trans, 'url': path('app_home')},
    {'label': 'Посты', 'url': path('app_posts')},
    {'label': post.title, 'url': ''}
] %}

{% block title %}{{ post.metaTitle ?: post.title }}{% endblock %}
{% block meta_description %}{{ post.metaDescription ?: post.excerpt }}{% endblock %}
{% block meta_keywords %}{{ post.metaKeywords }}{% endblock %}

{% block body %}
<div class="flex gap-2">
    
    <div class="flex-1 p-3">
        <article class="bg-white dark:bg-gray-800">
            {% if post.featuredImage %}
                <div class="aspect-video w-full overflow-hidden rounded-t-lg">
                    <img src="/media/posts/{{ post.featuredImage }}" 
                         alt="{{ post.title }}" 
                         class="w-full h-full object-cover">
                </div>
            {% endif %}
            
            <div class="p-6">
                <header class="mb-6">
                    <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">{{ post.title }}</h1>
                    
                    <div class="flex items-center justify-between text-sm text-gray-500 dark:text-gray-400 mb-4">
                        <div class="flex items-center gap-4">
                            <span>Автор: {{ post.author.username }}</span>
                            <time datetime="{{ post.publishedAt|date('c') }}">
                                {{ post.publishedAt|date('d.m.Y H:i') }}
                            </time>
                        </div>
                        
                        {% if post.categories|length > 0 %}
                            <div class="flex flex-wrap gap-1">
                                {% for category in post.categories %}
                                    <a href="{{ path('app_post_category', {slug: category.slug}) }}" 
                                       class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-blue-100 text-blue-800 hover:bg-blue-200 transition-colors">
                                        {{ category.name }}
                                    </a>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                    
                    {% if post.excerpt %}
                        <div class="text-lg text-gray-600 dark:text-gray-300 italic border-l-4 border-orange-500 pl-4 mb-6 prose prose-sm max-w-none dark:prose-invert">
                            {{ post.excerpt|raw }}
                        </div>
                    {% endif %}
                </header>
                
                <div class="prose prose-lg max-w-none dark:prose-invert">
                    {{ post.content|raw }}
                </div>
                
                {% if children|length > 0 %}
                    <div class="mt-8 pt-8 border-t border-gray-200 dark:border-gray-700">
                        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Подразделы</h2>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            {% for child in children %}
                                <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4">
                                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
                                        <a href="{{ path('app_post_show', {slug: child.fullSlug}) }}" 
                                           class="hover:text-orange-600 dark:hover:text-orange-400 transition-colors">
                                            {{ child.title }}
                                        </a>
                                    </h3>
                                    {% if child.excerpt %}
                                        <p class="text-gray-600 dark:text-gray-300 text-sm">
                                            {{ child.excerpt|slice(0, 100) }}{% if child.excerpt|length > 100 %}...{% endif %}
                                        </p>
                                    {% endif %}
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}
            </div>
        </article>
        
        {# Навигация по родительским/дочерним постам #}
        {% if post.parent %}
            <div class="mt-4 bg-blue-50 dark:bg-blue-900/20 rounded-lg p-4">
                <p class="text-sm text-blue-600 dark:text-blue-400 mb-2">Родительская страница:</p>
                <a href="{{ path('app_post_show', {slug: post.parent.fullSlug}) }}" 
                   class="text-blue-700 dark:text-blue-300 hover:text-blue-900 dark:hover:text-blue-100 font-medium">
                    ← {{ post.parent.title }}
                </a>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}