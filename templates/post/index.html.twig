{% extends 'base.html.twig' %}

{% set breadcrumbs = [
    {'label': 'breadcrumb.home'|trans, 'url': path('app_home')},
    {'label': 'Посты', 'url': ''}
] %}

{% block title %}Все посты{% endblock %}

{% block body %}
<div class="flex gap-2">
    {% include 'partials/_sidebar.html.twig' %}
    
    <div class="flex-1 p-3">
        <div class="mb-4">
            <h1 class="text-3xl text-gray-900 dark:text-gray-100">Все посты</h1>
        </div>

        {% if posts|length > 0 %}
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for post in posts %}
                    <article class="bg-white dark:bg-gray-800 rounded-lg shadow hover:shadow-lg transition-shadow">
                        {% if post.featuredImage %}
                            <div class="aspect-video overflow-hidden rounded-t-lg">
                                <img src="/media/posts/{{ post.featuredImage }}" 
                                     alt="{{ post.title }}" 
                                     class="w-full h-full object-cover hover:scale-105 transition-transform duration-300">
                            </div>
                        {% endif %}
                        
                        <div class="p-4">
                            <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
                                <a href="{{ path('app_post_show', {slug: post.fullSlug}) }}" 
                                   class="hover:text-orange-600 dark:hover:text-orange-400 transition-colors">
                                    {{ post.title }}
                                </a>
                            </h2>
                            
                            {% if post.excerpt %}
                                <p class="text-gray-600 dark:text-gray-300 mb-3">
                                    {{ post.excerpt|slice(0, 150) }}{% if post.excerpt|length > 150 %}...{% endif %}
                                </p>
                            {% endif %}
                            
                            {% if post.categories|length > 0 %}
                                <div class="flex flex-wrap gap-1 mb-3">
                                    {% for category in post.categories %}
                                        <a href="{{ path('app_post_category', {slug: category.slug}) }}" 
                                           class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-blue-100 text-blue-800 hover:bg-blue-200 transition-colors">
                                            {{ category.name }}
                                        </a>
                                    {% endfor %}
                                </div>
                            {% endif %}
                            
                            <div class="flex items-center justify-between text-sm text-gray-500 dark:text-gray-400">
                                <span>{{ post.author.username }}</span>
                                <time datetime="{{ post.publishedAt|date('c') }}">
                                    {{ post.publishedAt|date('d.m.Y') }}
                                </time>
                            </div>
                        </div>
                    </article>
                {% endfor %}
            </div>

            {# Пагинация #}
            {% if total_pages > 1 %}
                <div class="mt-8 flex justify-center gap-2">
                    {% if page > 1 %}
                        <a href="{{ path('app_posts', {page: page - 1}) }}" 
                           class="px-4 py-2 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded-md hover:bg-gray-50 dark:hover:bg-gray-700 transition">
                            ← Предыдущая
                        </a>
                    {% endif %}
                    
                    <span class="px-4 py-2 bg-orange-600 text-white rounded-md">
                        Страница {{ page }} из {{ total_pages }}
                    </span>
                    
                    {% if page < total_pages %}
                        <a href="{{ path('app_posts', {page: page + 1}) }}" 
                           class="px-4 py-2 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded-md hover:bg-gray-50 dark:hover:bg-gray-700 transition">
                            Следующая →
                        </a>
                    {% endif %}
                </div>
            {% endif %}
        {% else %}
            <div class="text-center py-12">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">Нет постов</h3>
                <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Посты пока не опубликованы.</p>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}