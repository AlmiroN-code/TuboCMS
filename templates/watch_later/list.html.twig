{% extends 'base.html.twig' %}

{% set breadcrumbs = [
    {'label': 'breadcrumb.home'|trans, 'url': path('app_home')},
    {'label': 'watch_later.title'|trans, 'url': ''}
] %}

{% block title %}{{ 'watch_later.title'|trans }} - {{ parent() }}{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-6">
    <div class="mb-6">
        <h1 class="text-2xl font-bold text-gray-800 mb-2 flex items-center gap-2">
            {{ ux_icon('mingcute:time-line', {class: 'w-7 h-7'}) }}
            {{ 'watch_later.title'|trans }}
        </h1>
        <p class="text-gray-600">
            {{ 'watch_later.description'|trans({'%count%': total}) }}
        </p>
    </div>

    {% if videos|length > 0 %}
        <div class="video-grid">
            {% for video in videos %}
                {% include 'video/_card.html.twig' with {'video': video} %}
            {% endfor %}
        </div>

        {% if totalPages > 1 %}
            <div class="mt-8">
                {% include 'partials/_pagination.html.twig' with {
                    'currentPage': currentPage,
                    'totalPages': totalPages,
                    'route': 'watch_later_list'
                } %}
            </div>
        {% endif %}
    {% else %}
        <div class="text-center py-16">
            <div class="mb-4">
                {{ ux_icon('mingcute:time-line', {class: 'w-24 h-24 mx-auto text-gray-300'}) }}
            </div>
            <h2 class="text-xl font-semibold text-gray-700 mb-2">
                {{ 'watch_later.empty.title'|trans }}
            </h2>
            <p class="text-gray-500 mb-6">
                {{ 'watch_later.empty.description'|trans }}
            </p>
            <a href="{{ path('app_home') }}" class="btn btn-primary">
                <svg class="w-5 h-5 inline-block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                </svg>
                {{ 'watch_later.empty.browse_videos'|trans }}
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}
