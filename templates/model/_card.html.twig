{# Карточка модели для сетки (компактная) #}
<a href="{{ path('app_model_show', {slug: model.slug}) }}" 
   class="group bg-white dark:bg-slate-800 rounded shadow hover:shadow-lg transition overflow-hidden">
    {# Аватар #}
    <div class="aspect-[3/4] bg-gray-200 dark:bg-slate-700 relative overflow-hidden">
        {% if model.avatar %}
            {{ lazy_img('/media/avatars/' ~ model.avatar, model.displayName ~ ' - ' ~ ('model.profile'|trans), 'w-full h-full object-cover group-hover:scale-105 transition-transform duration-300') }}
        {% else %}
            <div class="w-full h-full flex items-center justify-center text-gray-400 dark:text-gray-500">
                <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                </svg>
            </div>
        {% endif %}
        
        {# Бейджи #}
        <div class="absolute top-1 left-1 flex gap-0.5">
            {% if model.isVerified %}
                <span class="bg-blue-500 text-white px-1 py-0.5 rounded flex items-center" title="{{ 'model.verified'|trans }}">
                    <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                    </svg>
                </span>
            {% endif %}
            {% if model.isPremium %}
                <span class="bg-yellow-500 text-white px-1 py-0.5 rounded flex items-center" title="{{ 'model.premium'|trans }}">
                    <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                    </svg>
                </span>
            {% endif %}
        </div>
        
        {# Флаг страны #}
        {% set countryCode = model.country|country_flag %}
        {% if countryCode %}
            {{ lazy_img('https://flagcdn.com/w20/' ~ countryCode ~ '.png', model.country, 'absolute top-1 right-1 w-5 h-auto rounded-sm shadow', 20) }}
        {% endif %}
    </div>
    
    {# Информация #}
    <div class="p-2">
        <h3 class="text-sm font-medium text-gray-900 dark:text-white truncate group-hover:text-orange-600 dark:group-hover:text-orange-400">
            {{ model.displayName }}
        </h3>
        <div class="mt-1 flex items-center gap-2 text-[10px] text-gray-500 dark:text-gray-400">
            <span class="flex items-center gap-0.5" title="{{ 'model.stats.videos'|trans }}">
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                </svg>
                {{ model.videosCount|number_format }}
            </span>
            <span class="flex items-center gap-0.5" title="{{ 'model.stats.views'|trans }}">
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                </svg>
                {{ model.viewsCount|number_format }}
            </span>
        </div>
    </div>
</a>
