{% extends 'base.html.twig' %}

{% block title %}{{ channel.name }} - О канале{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <!-- Баннер канала -->
    <div class="relative h-64 md:h-80 rounded-lg overflow-hidden mb-8 bg-gradient-to-r from-blue-500 to-purple-600"
         {% if channel.bannerUrl %}style="background-image: url('{{ channel.bannerUrl }}'); background-size: cover; background-position: center;"{% endif %}>
        <div class="absolute inset-0 bg-black bg-opacity-30"></div>
        
        <!-- Информация о канале -->
        <div class="absolute bottom-0 left-0 right-0 p-6 text-white">
            <div class="flex items-end space-x-6">
                <!-- Аватар -->
                <div class="flex-shrink-0">
                    {% if channel_avatar(channel.avatar) %}
                        <img src="{{ channel_avatar(channel.avatar) }}" alt="{{ channel.name }}" 
                             class="w-24 h-24 md:w-32 md:h-32 rounded-full border-4 border-white shadow-lg">
                    {% else %}
                        <div class="w-24 h-24 md:w-32 md:h-32 rounded-full border-4 border-white shadow-lg bg-gray-300 flex items-center justify-center">
                            <i class="fas fa-tv text-gray-600 text-3xl"></i>
                        </div>
                    {% endif %}
                </div>

                <!-- Информация -->
                <div class="flex-1 min-w-0">
                    <h1 class="text-2xl md:text-4xl font-bold mb-2">
                        {{ channel.name }}
                        {% if channel.isVerified %}
                            <i class="fas fa-check-circle text-blue-400 ml-2" title="Верифицирован"></i>
                        {% endif %}
                        {% if channel.isPremium %}
                            <i class="fas fa-crown text-yellow-400 ml-2" title="Premium канал"></i>
                        {% endif %}
                    </h1>
                    
                    <div class="flex flex-wrap items-center space-x-4 text-sm md:text-base">
                        <span class="px-3 py-1 rounded-full 
                                   {{ channel.type == 'personal' ? 'bg-blue-500' : 
                                      (channel.type == 'studio' ? 'bg-purple-500' : 'bg-green-500') }}">
                            {% if channel.type == 'personal' %}Личный канал
                            {% elseif channel.type == 'studio' %}Студия
                            {% else %}Компания{% endif %}
                        </span>
                        <span>{{ channel.subscribersCount|number_format }} подписчиков</span>
                        <span>{{ channel.videosCount|number_format }} видео</span>
                        <span>{{ channel.totalViews|number_format }} просмотров</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Навигация -->
    <div class="flex space-x-6 mb-8 border-b border-gray-200">
        <a href="{{ path('channel_show', {slug: channel.slug}) }}" 
           class="pb-4 border-b-2 border-transparent text-gray-600 hover:text-gray-900 transition-colors">
            Видео
        </a>
        <a href="{{ path('channel_about', {slug: channel.slug}) }}" 
           class="pb-4 border-b-2 border-blue-600 text-blue-600 font-semibold">
            О канале
        </a>
    </div>

    <!-- Информация о канале -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Основная информация -->
        <div class="lg:col-span-2 space-y-6">
            {% if channel.description %}
            <div class="bg-white rounded-lg shadow-sm p-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-4">Описание</h2>
                <div class="text-gray-700 leading-relaxed prose prose-sm max-w-none">{{ channel.description|raw }}</div>
            </div>
            {% endif %}

            <!-- Социальные сети -->
            {% if channel.website or channel.email or channel.twitter or channel.instagram or channel.onlyfans %}
            <div class="bg-white rounded-lg shadow-sm p-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-4">Контакты</h2>
                <div class="space-y-3">
                    {% if channel.website %}
                    <div class="flex items-center space-x-3">
                        <i class="fas fa-globe text-gray-500 w-5"></i>
                        <a href="{{ channel.website }}" target="_blank" class="text-blue-600 hover:text-blue-800">
                            {{ channel.website }}
                        </a>
                    </div>
                    {% endif %}
                    
                    {% if channel.email %}
                    <div class="flex items-center space-x-3">
                        <i class="fas fa-envelope text-gray-500 w-5"></i>
                        <a href="mailto:{{ channel.email }}" class="text-blue-600 hover:text-blue-800">
                            {{ channel.email }}
                        </a>
                    </div>
                    {% endif %}
                    
                    {% if channel.twitter %}
                    <div class="flex items-center space-x-3">
                        <i class="fab fa-twitter text-gray-500 w-5"></i>
                        <a href="https://twitter.com/{{ channel.twitter }}" target="_blank" class="text-blue-600 hover:text-blue-800">
                            @{{ channel.twitter }}
                        </a>
                    </div>
                    {% endif %}
                    
                    {% if channel.instagram %}
                    <div class="flex items-center space-x-3">
                        <i class="fab fa-instagram text-gray-500 w-5"></i>
                        <a href="https://instagram.com/{{ channel.instagram }}" target="_blank" class="text-blue-600 hover:text-blue-800">
                            @{{ channel.instagram }}
                        </a>
                    </div>
                    {% endif %}
                    
                    {% if channel.onlyfans %}
                    <div class="flex items-center space-x-3">
                        <i class="fas fa-heart text-gray-500 w-5"></i>
                        <a href="https://onlyfans.com/{{ channel.onlyfans }}" target="_blank" class="text-blue-600 hover:text-blue-800">
                            OnlyFans: {{ channel.onlyfans }}
                        </a>
                    </div>
                    {% endif %}
                </div>
            </div>
            {% endif %}
        </div>

        <!-- Боковая панель -->
        <div class="space-y-6">
            <!-- Статистика -->
            <div class="bg-white rounded-lg shadow-sm p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Статистика</h3>
                <div class="space-y-3">
                    <div class="flex justify-between">
                        <span class="text-gray-600">Подписчиков:</span>
                        <span class="font-semibold">{{ channel.subscribersCount|number_format }}</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600">Видео:</span>
                        <span class="font-semibold">{{ channel.videosCount|number_format }}</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600">Просмотров:</span>
                        <span class="font-semibold">{{ channel.totalViews|number_format }}</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600">Создан:</span>
                        <span class="font-semibold">{{ channel.createdAt|date('d.m.Y') }}</span>
                    </div>
                </div>
            </div>

            <!-- Владелец -->
            <div class="bg-white rounded-lg shadow-sm p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Владелец</h3>
                <div class="flex items-center space-x-3">
                    {% if channel.owner.avatar %}
                        <img src="{{ asset('media/avatars/' ~ channel.owner.avatar) }}" alt="{{ channel.owner.username }}" 
                             class="w-12 h-12 rounded-full">
                    {% else %}
                        <div class="w-12 h-12 rounded-full bg-gray-300 flex items-center justify-center">
                            <i class="fas fa-user text-gray-600"></i>
                        </div>
                    {% endif %}
                    <div>
                        <div class="font-semibold text-gray-900">{{ channel.owner.username }}</div>
                        <div class="text-sm text-gray-500">Участник с {{ channel.owner.createdAt|date('M Y') }}</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
