{% extends 'admin/base.html.twig' %}

{% block title %}Homepage Settings{% endblock %}

{% block content %}
<div class="container mx-auto">
    <div class="flex items-center gap-4 mb-6">
        <a href="{{ path('admin_settings') }}" class="text-gray-500 hover:text-gray-700">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
        </a>
        <h1 class="text-3xl font-bold">Homepage Settings</h1>
    </div>
    
    <form method="POST" class="space-y-6">
        {# New Videos Block #}
        <div class="bg-white rounded-md shadow p-6">
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-xl font-semibold">New Videos Block</h2>
                <label class="flex items-center">
                    <input type="checkbox" name="home_show_new_videos" value="1" 
                           {{ settings.home_show_new_videos ? 'checked' : '' }}
                           class="w-4 h-4 text-orange-600 border-gray-300 rounded focus:ring-orange-500">
                    <span class="ml-2 text-sm text-gray-700">Show block</span>
                </label>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Number of videos in block</label>
                <input type="number" name="home_new_videos_count" value="{{ settings.home_new_videos_count }}" 
                       min="1"
                       class="w-full max-w-xs px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-orange-500 focus:border-transparent">
                <p class="text-sm text-gray-500 mt-1">Recommended multiple of 4 (4, 8, 12, 16...)</p>
            </div>
        </div>

        {# Popular Videos Block #}
        <div class="bg-white rounded-md shadow p-6">
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-xl font-semibold">Popular Videos Block</h2>
                <label class="flex items-center">
                    <input type="checkbox" name="home_show_popular_videos" value="1" 
                           {{ settings.home_show_popular_videos ? 'checked' : '' }}
                           class="w-4 h-4 text-orange-600 border-gray-300 rounded focus:ring-orange-500">
                    <span class="ml-2 text-sm text-gray-700">Show block</span>
                </label>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Number of videos in block</label>
                <input type="number" name="home_popular_videos_count" value="{{ settings.home_popular_videos_count }}" 
                       min="1"
                       class="w-full max-w-xs px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-orange-500 focus:border-transparent">
                <p class="text-sm text-gray-500 mt-1">Sorted by view count</p>
            </div>
        </div>

        {# Featured Videos Block #}
        <div class="bg-white rounded-md shadow p-6">
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-xl font-semibold">Featured Videos Block</h2>
                <label class="flex items-center">
                    <input type="checkbox" name="home_show_featured_videos" value="1" 
                           {{ settings.home_show_featured_videos ? 'checked' : '' }}
                           class="w-4 h-4 text-orange-600 border-gray-300 rounded focus:ring-orange-500">
                    <span class="ml-2 text-sm text-gray-700">Show block</span>
                </label>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Number of videos in block</label>
                <input type="number" name="home_featured_videos_count" value="{{ settings.home_featured_videos_count }}" 
                       min="1"
                       class="w-full max-w-xs px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-orange-500 focus:border-transparent">
                <p class="text-sm text-gray-500 mt-1">Videos marked as "Featured" in admin</p>
            </div>
        </div>

        {# Recently Watched Block #}
        <div class="bg-white rounded-md shadow p-6">
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-xl font-semibold">Recently Watched Block</h2>
                <label class="flex items-center">
                    <input type="checkbox" name="home_show_recently_watched" value="1" 
                           {{ settings.home_show_recently_watched ? 'checked' : '' }}
                           class="w-4 h-4 text-orange-600 border-gray-300 rounded focus:ring-orange-500">
                    <span class="ml-2 text-sm text-gray-700">Show block</span>
                </label>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Number of videos in block</label>
                <input type="number" name="home_recently_watched_count" value="{{ settings.home_recently_watched_count }}" 
                       min="1"
                       class="w-full max-w-xs px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-orange-500 focus:border-transparent">
                <p class="text-sm text-gray-500 mt-1">Shows only for logged-in users</p>
            </div>
        </div>

        {# Action Buttons #}
        <div class="flex justify-end gap-4">
            <a href="{{ path('admin_settings') }}" class="px-6 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">
                Cancel
            </a>
            <button type="submit" class="px-6 py-2 bg-orange-600 text-white rounded-md hover:bg-orange-700">
                Save Settings
            </button>
        </div>
    </form>
</div>
{% endblock %}
