{% extends 'admin/base.html.twig' %}

{% block title %}Общие настройки{% endblock %}

{% block page_title %}
<svg class="w-6 h-6 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
</svg>
Общие настройки
{% endblock %}

{% block content %}
<div class="container mx-auto">
    <h1 class="text-3xl font-bold mb-6">Общие настройки сайта</h1>
    
    <form method="POST" enctype="multipart/form-data" class="space-y-6">
        {# Дополнительные настройки #}
        <div class="bg-white rounded-md shadow p-6">
            <h2 class="text-xl font-semibold mb-4">Дополнительные настройки</h2>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <a href="{{ path('admin_seo_settings') }}" 
                   class="flex items-center p-4 border border-gray-200 rounded-md hover:bg-gray-50 transition">
                    <svg class="w-8 h-8 text-orange-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                    <div>
                        <h3 class="font-medium text-gray-900">SEO настройки</h3>
                        <p class="text-sm text-gray-500">Заголовки, описания, ключевые слова</p>
                    </div>
                </a>
                
                <a href="{{ path('admin_main_page_settings') }}" 
                   class="flex items-center p-4 border border-gray-200 rounded-md hover:bg-gray-50 transition">
                    <svg class="w-8 h-8 text-purple-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                    </svg>
                    <div>
                        <h3 class="font-medium text-gray-900">Настройки главной страницы</h3>
                        <p class="text-sm text-gray-500">Блоки видео, количество вывода</p>
                    </div>
                </a>
                
                <a href="{{ path('admin_transcoding_settings') }}" 
                   class="flex items-center p-4 border border-gray-200 rounded-md hover:bg-gray-50 transition">
                    <svg class="w-8 h-8 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                    </svg>
                    <div>
                        <h3 class="font-medium text-gray-900">Настройки транскодирования</h3>
                        <p class="text-sm text-gray-500">Постеры, превью, качество обработки</p>
                    </div>
                </a>
                
                <a href="{{ path('admin_encoding_profiles') }}" 
                   class="flex items-center p-4 border border-gray-200 rounded-md hover:bg-gray-50 transition">
                    <svg class="w-8 h-8 text-green-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    <div>
                        <h3 class="font-medium text-gray-900">Профили кодирования</h3>
                        <p class="text-sm text-gray-500">Качество и разрешения видео</p>
                    </div>
                </a>
                
                <a href="{{ path('admin_category_settings') }}" 
                   class="flex items-center p-4 border border-gray-200 rounded-md hover:bg-gray-50 transition">
                    <svg class="w-8 h-8 text-indigo-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                    </svg>
                    <div>
                        <h3 class="font-medium text-gray-900">Настройки категорий</h3>
                        <p class="text-sm text-gray-500">Автогенерация постеров категорий</p>
                    </div>
                </a>
                
                <a href="{{ path('admin_content_protection') }}" 
                   class="flex items-center p-4 border border-gray-200 rounded-md hover:bg-gray-50 transition">
                    <svg class="w-8 h-8 text-red-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                    </svg>
                    <div>
                        <h3 class="font-medium text-gray-900">Защита контента</h3>
                        <p class="text-sm text-gray-500">Hotlink, User-Agent, подписанные URL</p>
                    </div>
                </a>
                
                <a href="{{ path('admin_pwa_settings') }}" 
                   class="flex items-center p-4 border border-gray-200 rounded-md hover:bg-gray-50 transition">
                    <svg class="w-8 h-8 text-pink-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                    </svg>
                    <div>
                        <h3 class="font-medium text-gray-900">PWA и Push уведомления</h3>
                        <p class="text-sm text-gray-500">Progressive Web App, Service Worker</p>
                    </div>
                </a>
            </div>
        </div>
        
        {# Общие настройки #}
        <div class="bg-white rounded-md shadow p-6">
            <h2 class="text-xl font-semibold mb-4">Основная информация</h2>
            
            <div class="space-y-4">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    {# Логотип #}
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Логотип сайта</label>
                        {% if settings.site_logo %}
                            <div class="mb-2">
                                <img src="{{ settings.site_logo }}" alt="Логотип" class="h-16 object-contain border border-gray-200 rounded p-2">
                            </div>
                        {% endif %}
                        <input type="file" name="site_logo" accept="image/*"
                               class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-orange-500 focus:border-transparent">
                        <p class="text-sm text-gray-500 mt-1">Рекомендуемый размер: 200x50px, PNG с прозрачностью</p>
                    </div>
                    
                    {# Фавикон #}
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Фавикон</label>
                        {% if settings.site_favicon %}
                            <div class="mb-2">
                                <img src="{{ settings.site_favicon }}" alt="Фавикон" class="h-8 w-8 object-contain border border-gray-200 rounded">
                            </div>
                        {% endif %}
                        <input type="file" name="site_favicon" accept="image/x-icon,image/png"
                               class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-orange-500 focus:border-transparent">
                        <p class="text-sm text-gray-500 mt-1">Рекомендуемый размер: 32x32px или 16x16px, ICO или PNG</p>
                    </div>
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Название сайта</label>
                    <input type="text" name="site_name" value="{{ settings.site_name }}" 
                           class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-orange-500 focus:border-transparent">
                </div>
                
                <div class="flex items-center">
                    <input type="checkbox" name="append_site_name_to_title" value="1" id="append_site_name_to_title"
                           {{ settings.append_site_name_to_title ? 'checked' : '' }}
                           class="w-4 h-4 text-orange-600 border-gray-300 rounded focus:ring-orange-500">
                    <label for="append_site_name_to_title" class="ml-2 text-sm font-medium text-gray-700">
                        Добавлять в тег title страниц название сайта
                    </label>
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Описание сайта</label>
                    <textarea name="site_description" rows="3"
                              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-orange-500 focus:border-transparent">{{ settings.site_description }}</textarea>
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Ключевые слова (через запятую)</label>
                    <input type="text" name="site_keywords" value="{{ settings.site_keywords }}"
                           class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-orange-500 focus:border-transparent">
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Email для связи</label>
                    <input type="email" name="contact_email" value="{{ settings.contact_email }}"
                           class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-orange-500 focus:border-transparent">
                </div>
            </div>
        </div>

        {# Настройки видео #}
        <div class="bg-white rounded-md shadow p-6">
            <h2 class="text-xl font-semibold mb-4">Настройки видео</h2>
            
            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Максимальный размер видео (MB)</label>
                    <input type="number" name="max_video_size" value="{{ settings.max_video_size }}" min="1" max="5000"
                           class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-orange-500 focus:border-transparent">
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Разрешенные форматы (через запятую)</label>
                    <input type="text" name="allowed_video_formats" value="{{ settings.allowed_video_formats }}"
                           class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-orange-500 focus:border-transparent">
                    <p class="text-sm text-gray-500 mt-1">Например: mp4,avi,mov,mkv</p>
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Видео на странице</label>
                    <input type="number" name="videos_per_page" value="{{ settings.videos_per_page }}" min="1"
                           class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-orange-500 focus:border-transparent">
                </div>
            </div>
        </div>

        {# Настройки регистрации #}
        <div class="bg-white rounded-md shadow p-6">
            <h2 class="text-xl font-semibold mb-4">Регистрация и пользователи</h2>
            
            <div class="space-y-4">
                <div class="flex items-center">
                    <input type="checkbox" name="registration_enabled" value="1" id="registration_enabled"
                           {{ settings.registration_enabled ? 'checked' : '' }}
                           class="w-4 h-4 text-orange-600 border-gray-300 rounded focus:ring-orange-500">
                    <label for="registration_enabled" class="ml-2 text-sm font-medium text-gray-700">
                        Разрешить регистрацию новых пользователей
                    </label>
                </div>
                
                <div class="flex items-center">
                    <input type="checkbox" name="email_verification_required" value="1" id="email_verification_required"
                           {{ settings.email_verification_required ? 'checked' : '' }}
                           class="w-4 h-4 text-orange-600 border-gray-300 rounded focus:ring-orange-500">
                    <label for="email_verification_required" class="ml-2 text-sm font-medium text-gray-700">
                        Требовать подтверждение email при регистрации
                    </label>
                </div>
            </div>
        </div>

        {# Настройки комментариев #}
        <div class="bg-white rounded-md shadow p-6">
            <h2 class="text-xl font-semibold mb-4">Комментарии</h2>
            
            <div class="space-y-4">
                <div class="flex items-center">
                    <input type="checkbox" name="comments_enabled" value="1" id="comments_enabled"
                           {{ settings.comments_enabled ? 'checked' : '' }}
                           class="w-4 h-4 text-orange-600 border-gray-300 rounded focus:ring-orange-500">
                    <label for="comments_enabled" class="ml-2 text-sm font-medium text-gray-700">
                        Включить комментарии на сайте
                    </label>
                </div>
                
                <div class="flex items-center">
                    <input type="checkbox" name="comments_moderation" value="1" id="comments_moderation"
                           {{ settings.comments_moderation ? 'checked' : '' }}
                           class="w-4 h-4 text-orange-600 border-gray-300 rounded focus:ring-orange-500">
                    <label for="comments_moderation" class="ml-2 text-sm font-medium text-gray-700">
                        Модерация комментариев (требуется одобрение администратора)
                    </label>
                </div>
            </div>
        </div>

        {# Кнопки действий #}
        <div class="flex justify-end gap-4">
            <a href="{{ path('admin_dashboard') }}" class="px-6 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">
                Отмена
            </a>
            <button type="submit" class="px-6 py-2 bg-orange-600 text-white rounded-md hover:bg-orange-700">
                Сохранить настройки
            </button>
        </div>
    </form>
</div>
{% endblock %}
