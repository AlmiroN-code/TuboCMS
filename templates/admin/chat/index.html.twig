{% extends 'admin/base.html.twig' %}
{% import 'admin/_pagination_selector.html.twig' as pagination %}

{% block title %}Управление чатом{% endblock %}

{% block page_title %}
<svg class="w-6 h-6 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
</svg>
Управление чатом
{% endblock %}

{% block content %}
<div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex items-center justify-between gap-4">
            <div class="flex items-center gap-4">
                <form method="GET" class="flex items-center gap-2">
                    <label class="text-sm font-medium text-gray-700">Комната:</label>
                    <select name="room" onchange="this.form.submit()" class="px-3 py-2 border border-gray-300 rounded-md text-sm bg-white focus:outline-none focus:ring-2 focus:ring-blue-500">
                        {% for room in rooms %}
                            <option value="{{ room }}" {{ room == currentRoom ? 'selected' : '' }}>{{ room }}</option>
                        {% endfor %}
                    </select>
                </form>
                {{ pagination.perPageSelector(perPage, total) }}
            </div>
            
            <form method="POST" action="{{ path('admin_chat_cleanup') }}" class="flex items-center gap-2" onsubmit="return confirm('Удалить старые сообщения?')">
                <input type="number" name="days" value="30" min="1" max="365" class="w-20 px-3 py-2 border border-gray-300 rounded-md text-sm">
                <button type="submit" class="px-4 py-2 bg-red-600 text-white rounded-md text-sm font-medium hover:bg-red-700 transition-colors">
                    Очистить старше (дней)
                </button>
            </form>
        </div>
    </div>

    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Пользователь</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Сообщение</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Тип</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Дата</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Действия</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for message in messages %}
                <tr class="hover:bg-gray-50 {{ message.isDeleted ? 'opacity-50' : '' }}">
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ message.id }}</td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="flex items-center">
                            {% if message.user.avatar %}
                                <img src="/media/avatars/{{ message.user.avatar }}" alt="{{ message.user.username }}" class="w-8 h-8 rounded-full object-cover mr-2">
                            {% else %}
                                <div class="w-8 h-8 rounded-full bg-gray-300 flex items-center justify-center text-gray-600 font-semibold mr-2">
                                    {{ message.user.username|slice(0, 1)|upper }}
                                </div>
                            {% endif %}
                            <div>
                                <div class="text-sm font-medium text-gray-900">{{ message.user.username }}</div>
                                {% if message.user.isVerified %}
                                    <span class="text-xs text-blue-600">✓ Верифицирован</span>
                                {% endif %}
                            </div>
                        </div>
                    </td>
                    <td class="px-6 py-4">
                        <div class="text-sm text-gray-900 max-w-md break-words">
                            {{ message.message }}
                        </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full 
                            {% if message.type == 'text' %}bg-gray-100 text-gray-800
                            {% elseif message.type == 'system' %}bg-blue-100 text-blue-800
                            {% else %}bg-purple-100 text-purple-800{% endif %}">
                            {{ message.type }}
                        </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        {{ message.createdAt|date('d.m.Y H:i') }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                        {% if not message.isDeleted %}
                            <form method="POST" action="{{ path('admin_chat_delete_message', {id: message.id}) }}" class="inline" onsubmit="return confirm('Удалить сообщение?')">
                                <button type="submit" class="text-red-600 hover:text-red-900">Удалить</button>
                            </form>
                        {% else %}
                            <span class="text-gray-400">Удалено</span>
                        {% endif %}
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="6" class="px-6 py-4 text-center text-gray-500">
                        Сообщений нет
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    {% if pages > 1 %}
    <div class="px-6 py-4 border-t border-gray-200">
        <div class="flex justify-center gap-2">
            {% for p in 1..pages %}
                <a href="{{ path('admin_chat', {room: currentRoom, page: p, per_page: perPage}) }}" 
                   class="px-4 py-2 rounded {{ p == page ? 'bg-blue-600 text-white' : 'bg-white text-gray-700 hover:bg-gray-100 border border-gray-300' }}">
                    {{ p }}
                </a>
            {% endfor %}
        </div>
    </div>
    {% endif %}
</div>

{{ pagination.updateUrlScript() }}
{% endblock %}
