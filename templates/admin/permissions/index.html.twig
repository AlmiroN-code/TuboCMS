{% extends 'admin/base.html.twig' %}

{% block title %}Управление разрешениями{% endblock %}

{% block content %}
<div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Управление разрешениями</h1>
    <a href="{{ path('admin_permissions_new') }}" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md">
        Создать разрешение
    </a>
</div>

<div class="space-y-6">
    {% for category, categoryPermissions in permissions %}
    <div class="bg-white shadow-sm rounded-md overflow-hidden">
        <div class="bg-gray-50 px-6 py-3 border-b border-gray-200">
            <h2 class="text-lg font-medium text-gray-900 capitalize">{{ category }}</h2>
        </div>
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Разрешение
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Роли
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Статус
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Действия
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for permission in categoryPermissions %}
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div>
                            <div class="text-sm font-medium text-gray-900">{{ permission.displayName }}</div>
                            <div class="text-sm text-gray-500">{{ permission.name }}</div>
                            {% if permission.description %}
                            <div class="text-xs text-gray-400 mt-1">{{ permission.description }}</div>
                            {% endif %}
                        </div>
                    </td>
                    <td class="px-6 py-4">
                        <div class="flex flex-wrap gap-1">
                            {% for role in permission.roles %}
                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                {{ role.displayName }}
                            </span>
                            {% endfor %}
                        </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        {% if permission.isActive %}
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                            Активно
                        </span>
                        {% else %}
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                            Неактивно
                        </span>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                        <a href="{{ path('admin_permissions_edit', {id: permission.id}) }}" class="text-indigo-600 hover:text-indigo-900 mr-3">
                            Редактировать
                        </a>
                        {% if permission.roles|length == 0 %}
                        <form method="post" action="{{ path('admin_permissions_delete', {id: permission.id}) }}" class="inline" 
                              onsubmit="return confirm('Вы уверены, что хотите удалить это разрешение?')">
                            <button type="submit" class="text-red-600 hover:text-red-900">
                                Удалить
                            </button>
                        </form>
                        {% endif %}
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% else %}
    <div class="bg-white shadow-sm rounded-md p-6 text-center text-gray-500">
        Разрешения не найдены
    </div>
    {% endfor %}
</div>
{% endblock %}