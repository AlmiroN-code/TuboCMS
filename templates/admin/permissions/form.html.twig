{% extends 'admin/base.html.twig' %}

{% block title %}{{ permission.id ? 'Редактирование разрешения' : 'Создание разрешения' }}{% endblock %}

{% block content %}
<div class="mb-6">
    <h1 class="text-2xl font-bold text-gray-900">
        {{ permission.id ? 'Редактирование разрешения' : 'Создание разрешения' }}
    </h1>
</div>

<div class="bg-white shadow-sm rounded-md p-6">
    <form method="post">
        <div class="grid grid-cols-1 gap-6">
            <div>
                <label for="name" class="block text-sm font-medium text-gray-700">Системное имя</label>
                <input type="text" name="name" id="name" value="{{ permission.name }}" required
                       class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                <p class="mt-1 text-sm text-gray-500">Используется в коде (например: user.create, video.edit)</p>
            </div>

            <div>
                <label for="display_name" class="block text-sm font-medium text-gray-700">Отображаемое имя</label>
                <input type="text" name="display_name" id="display_name" value="{{ permission.displayName }}" required
                       class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
            </div>

            <div>
                <label for="category" class="block text-sm font-medium text-gray-700">Категория</label>
                <select name="category" id="category" required
                        class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                    <option value="">Выберите категорию</option>
                    <option value="video" {{ permission.category == 'video' ? 'selected' : '' }}>Видео</option>
                    <option value="category" {{ permission.category == 'category' ? 'selected' : '' }}>Категории</option>
                    <option value="tag" {{ permission.category == 'tag' ? 'selected' : '' }}>Теги</option>
                    <option value="model" {{ permission.category == 'model' ? 'selected' : '' }}>Модели</option>
                    <option value="channel" {{ permission.category == 'channel' ? 'selected' : '' }}>Каналы</option>
                    <option value="user" {{ permission.category == 'user' ? 'selected' : '' }}>Пользователи</option>
                    <option value="comment" {{ permission.category == 'comment' ? 'selected' : '' }}>Комментарии</option>
                    <option value="playlist" {{ permission.category == 'playlist' ? 'selected' : '' }}>Плейлисты</option>
                    <option value="post" {{ permission.category == 'post' ? 'selected' : '' }}>Посты</option>
                    <option value="advertising" {{ permission.category == 'advertising' ? 'selected' : '' }}>Реклама</option>
                    <option value="security" {{ permission.category == 'security' ? 'selected' : '' }}>Роли и разрешения</option>
                    <option value="settings" {{ permission.category == 'settings' ? 'selected' : '' }}>Настройки</option>
                    <option value="system" {{ permission.category == 'system' ? 'selected' : '' }}>Система</option>
                    <option value="streaming" {{ permission.category == 'streaming' ? 'selected' : '' }}>Live Streaming</option>
                </select>
            </div>

            <div>
                <label for="description" class="block text-sm font-medium text-gray-700">Описание</label>
                <textarea name="description" id="description" rows="3"
                          class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">{{ permission.description }}</textarea>
            </div>

            <div class="flex items-center">
                <input type="checkbox" name="is_active" id="is_active" value="1" 
                       {{ permission.isActive ? 'checked' : '' }}
                       class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
                <label for="is_active" class="ml-2 block text-sm text-gray-900">
                    Активное разрешение
                </label>
            </div>
        </div>

        <div class="mt-6 flex justify-end space-x-3">
            <a href="{{ path('admin_permissions') }}" 
               class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50">
                Отмена
            </a>
            <button type="submit" 
                    class="bg-indigo-600 py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white hover:bg-indigo-700">
                {{ permission.id ? 'Обновить' : 'Создать' }}
            </button>
        </div>
    </form>
</div>
{% endblock %}