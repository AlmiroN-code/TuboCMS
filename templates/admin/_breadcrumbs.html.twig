{% if admin_breadcrumbs is defined and admin_breadcrumbs|length > 0 %}
<nav class="mb-4" aria-label="Breadcrumb">
    <ol class="flex items-center space-x-2 text-sm text-gray-600">
        {% for breadcrumb in admin_breadcrumbs %}
            {% if not loop.last %}
                <li class="flex items-center">
                    <a href="{{ breadcrumb.url }}" class="hover:text-blue-600 transition-colors">
                        {{ breadcrumb.label }}
                    </a>
                    <svg class="w-4 h-4 mx-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                </li>
            {% else %}
                <li class="text-gray-900 font-medium" aria-current="page">
                    {{ breadcrumb.label }}
                </li>
            {% endif %}
        {% endfor %}
    </ol>
</nav>
{% endif %}
