{% extends 'admin/base.html.twig' %}

{% block title %}{{ user.id ? 'Edit User' : 'New User' }}{% endblock %}
{% block page_title %}{{ user.id ? 'Edit User' : 'New User' }}{% endblock %}

{% block content %}
<div class="bg-white rounded-md shadow p-6 max-w-2xl">
    <form method="post">
        <div class="space-y-6">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Username</label>
                <input type="text" name="username" value="{{ user.username }}" required
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                <input type="email" name="email" value="{{ user.email }}" required
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Password</label>
                <input type="password" name="password" {{ user.id ? '' : 'required' }}
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                {% if user.id %}
                    <p class="mt-1 text-sm text-gray-500">Leave empty to keep current</p>
                {% endif %}
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">System Roles</label>
                <div class="space-y-2">
                    <label class="flex items-center">
                        <input type="checkbox" name="roles[]" value="ROLE_USER" {{ 'ROLE_USER' in user.roles ? 'checked' : '' }}
                               class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                        <span class="ml-2 text-sm">ROLE_USER</span>
                    </label>
                    <label class="flex items-center">
                        <input type="checkbox" name="roles[]" value="ROLE_ADMIN" {{ 'ROLE_ADMIN' in user.roles ? 'checked' : '' }}
                               class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                        <span class="ml-2 text-sm">ROLE_ADMIN</span>
                    </label>
                </div>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Custom Roles</label>
                <div class="space-y-2 max-h-48 overflow-y-auto border border-gray-200 rounded-md p-3">
                    {% for role in available_roles %}
                    <label class="flex items-center">
                        <input type="checkbox" name="user_roles[]" value="{{ role.id }}" 
                               {{ user.userRoles.contains(role) ? 'checked' : '' }}
                               class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                        <span class="ml-2 text-sm">
                            <span class="font-medium">{{ role.displayName }}</span>
                            <span class="text-gray-500">({{ role.name }})</span>
                            {% if role.description %}
                            <div class="text-xs text-gray-400">{{ role.description }}</div>
                            {% endif %}
                        </span>
                    </label>
                    {% else %}
                    <p class="text-sm text-gray-500">No available roles</p>
                    {% endfor %}
                </div>
            </div>

            <div class="flex items-center">
                <input type="checkbox" name="is_verified" value="1" {{ user.isVerified ? 'checked' : '' }}
                       class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                <label class="ml-2 block text-sm text-gray-900">Verified</label>
            </div>

            <div class="flex items-center">
                <input type="checkbox" name="is_premium" value="1" {{ user.isPremium ? 'checked' : '' }}
                       class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                <label class="ml-2 block text-sm text-gray-900">Premium account</label>
            </div>

            <div class="flex space-x-4">
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded">
                    Save
                </button>
                <a href="{{ path('admin_users') }}" class="bg-gray-300 hover:bg-gray-400 text-gray-800 px-6 py-2 rounded">
                    Cancel
                </a>
            </div>
        </div>
    </form>
</div>
{% endblock %}
