{% extends 'admin/base.html.twig' %}

{% block title %}Мониторинг системы{% endblock %}

{% block content %}
<div class="p-6">
    <h1 class="text-2xl font-bold text-gray-800 dark:text-white mb-6">Мониторинг системы</h1>

    <!-- Общий статус системы - расширенный блок -->
    <div class="bg-white dark:bg-gray-800 rounded-md shadow mb-6">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
            <div class="flex justify-between items-center">
                <h2 class="text-lg font-semibold text-gray-800 dark:text-white">Общий статус системы</h2>
                <div class="flex items-center gap-4">
                    <span class="text-sm text-gray-500 dark:text-gray-400">
                        Проверено: {{ system_health.timestamp|date('d.m.Y H:i:s') }}
                    </span>
                    <span class="px-4 py-2 text-sm font-bold rounded-full 
                        {{ system_health.overall_status == 'healthy' ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200' : 
                           (system_health.overall_status == 'warning' ? 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200' : 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200') }}">
                        {% if system_health.overall_status == 'healthy' %}
                            ✓ Система работает нормально
                        {% elseif system_health.overall_status == 'warning' %}
                            ⚠ Есть предупреждения
                        {% else %}
                            ✕ Обнаружены проблемы
                        {% endif %}
                    </span>
                </div>
            </div>
        </div>
        <div class="p-6">
            <!-- Сводка по проверкам -->
            {% if system_summary is defined %}
            <div class="grid grid-cols-4 gap-4 mb-6">
                <div class="text-center p-4 bg-gray-50 dark:bg-gray-700 rounded-md">
                    <div class="text-3xl font-bold text-gray-800 dark:text-white">{{ system_summary.total_checks }}</div>
                    <div class="text-sm text-gray-500 dark:text-gray-400">Всего проверок</div>
                </div>
                <div class="text-center p-4 bg-green-50 dark:bg-green-900/30 rounded-md">
                    <div class="text-3xl font-bold text-green-600 dark:text-green-400">{{ system_summary.healthy_checks }}</div>
                    <div class="text-sm text-green-600 dark:text-green-400">Успешно</div>
                </div>
                <div class="text-center p-4 bg-yellow-50 dark:bg-yellow-900/30 rounded-md">
                    <div class="text-3xl font-bold text-yellow-600 dark:text-yellow-400">{{ system_summary.warning_checks }}</div>
                    <div class="text-sm text-yellow-600 dark:text-yellow-400">Предупреждения</div>
                </div>
                <div class="text-center p-4 bg-red-50 dark:bg-red-900/30 rounded-md">
                    <div class="text-3xl font-bold text-red-600 dark:text-red-400">{{ system_summary.error_checks }}</div>
                    <div class="text-sm text-red-600 dark:text-red-400">Ошибки</div>
                </div>
            </div>
            {% endif %}

            <!-- Список всех проблем -->
            {% if system_summary.all_issues is defined and system_summary.all_issues|length > 0 %}
            <div class="mb-6 p-4 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-md">
                <h3 class="font-semibold text-red-800 dark:text-red-200 mb-3">Обнаруженные проблемы:</h3>
                <ul class="space-y-2">
                    {% for issue in system_summary.all_issues %}
                    <li class="flex items-start gap-2">
                        <span class="mt-0.5 px-2 py-0.5 text-xs font-medium rounded 
                            {{ issue.status == 'warning' ? 'bg-yellow-100 text-yellow-800' : 'bg-red-100 text-red-800' }}">
                            {{ issue.check|replace({'_': ' '})|title }}
                        </span>
                        <span class="text-sm text-red-700 dark:text-red-300">{{ issue.message }}</span>
                    </li>
                    {% endfor %}
                </ul>
            </div>
            {% endif %}

            <!-- Карточки проверок -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-5 gap-4">
                {% for check_name, check in system_health.checks %}
                <div class="border rounded-md p-4 transition-all hover:shadow-md
                    {{ check.status == 'healthy' ? 'border-green-200 bg-green-50 dark:bg-green-900/20 dark:border-green-800' : 
                       (check.status == 'warning' ? 'border-yellow-200 bg-yellow-50 dark:bg-yellow-900/20 dark:border-yellow-800' : 'border-red-200 bg-red-50 dark:bg-red-900/20 dark:border-red-800') }}">
                    <div class="flex justify-between items-center mb-2">
                        <h3 class="font-medium text-gray-800 dark:text-white text-sm">
                            {% if check_name == 'ffmpeg' %}FFmpeg
                            {% elseif check_name == 'database' %}База данных
                            {% elseif check_name == 'storage' %}Хранилища
                            {% elseif check_name == 'disk_space' %}Диск
                            {% elseif check_name == 'processing_queue' %}Очередь
                            {% else %}{{ check_name|replace({'_': ' '})|title }}{% endif %}
                        </h3>
                        <span class="w-3 h-3 rounded-full 
                            {{ check.status == 'healthy' ? 'bg-green-500' : 
                               (check.status == 'warning' ? 'bg-yellow-500' : 'bg-red-500') }}"></span>
                    </div>
                    <p class="text-xs text-gray-500 dark:text-gray-400">
                        {{ check.status == 'healthy' ? 'OK' : (check.status == 'warning' ? 'Внимание' : 'Ошибка') }}
                    </p>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <!-- Хранилища - расширенный блок -->
    <div class="bg-white dark:bg-gray-800 rounded-md shadow mb-6">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
            <div class="flex justify-between items-center">
                <h2 class="text-lg font-semibold text-gray-800 dark:text-white">Хранилища</h2>
                {% if system_health.checks.storage is defined %}
                <div class="flex items-center gap-4 text-sm">
                    <span class="text-gray-500 dark:text-gray-400">
                        Активных: <strong class="text-green-600">{{ system_health.checks.storage.total_active|default(0) }}</strong>
                    </span>
                    {% if system_health.checks.storage.total_disabled|default(0) > 0 %}
                    <span class="text-gray-500 dark:text-gray-400">
                        Отключено: <strong class="text-gray-400">{{ system_health.checks.storage.total_disabled }}</strong>
                    </span>
                    {% endif %}
                </div>
                {% endif %}
            </div>
        </div>
        <div class="p-6">
            {% if system_health.checks.storage.storages is defined and system_health.checks.storage.storages|length > 0 %}
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                {% for storage_name, storage in system_health.checks.storage.storages %}
                    <div class="border rounded-md overflow-hidden {{ storage.is_healthy ? 'border-gray-200 dark:border-gray-700' : 'border-red-300 dark:border-red-700' }}">
                        <!-- Заголовок хранилища -->
                        <div class="px-4 py-3 bg-gray-50 dark:bg-gray-700 flex justify-between items-center">
                            <div class="flex items-center gap-3">
                                <div class="w-10 h-10 rounded-md flex items-center justify-center
                                    {{ storage.type == 'local' ? 'bg-blue-100 text-blue-600' : 
                                       (storage.type == 'ftp' ? 'bg-purple-100 text-purple-600' : 
                                       (storage.type == 'sftp' ? 'bg-green-100 text-green-600' : 'bg-orange-100 text-orange-600')) }}">
                                    {% if storage.type == 'local' %}
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"/>
                                        </svg>
                                    {% else %}
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"/>
                                        </svg>
                                    {% endif %}
                                </div>
                                <div>
                                    <h3 class="font-semibold text-gray-800 dark:text-white">{{ storage_name }}</h3>
                                    <p class="text-xs text-gray-500 dark:text-gray-400">{{ storage.type_label|default(storage.type|upper) }}</p>
                                </div>
                            </div>
                            <div class="flex items-center gap-2">
                                {% if storage.is_default %}
                                    <span class="px-2 py-1 text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200 rounded">По умолчанию</span>
                                {% endif %}
                                <span class="px-2 py-1 text-xs font-medium rounded {{ storage.is_healthy ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200' : 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200' }}">
                                    {{ storage.is_healthy ? 'Подключено' : 'Ошибка' }}
                                </span>
                            </div>
                        </div>

                        <!-- Содержимое хранилища -->
                        <div class="p-4">
                            {% if storage.error is defined %}
                                <div class="mb-3 p-3 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded text-sm text-red-700 dark:text-red-300">
                                    {{ storage.error }}
                                </div>
                            {% endif %}

                            {% if storage.usage_percentage is defined %}
                                <!-- Прогресс-бар использования -->
                                <div class="mb-4">
                                    <div class="flex justify-between text-sm mb-1">
                                        <span class="text-gray-600 dark:text-gray-400">Использовано</span>
                                        <span class="font-medium text-gray-800 dark:text-white">{{ storage.usage_percentage }}%</span>
                                    </div>
                                    <div class="w-full bg-gray-200 dark:bg-gray-600 rounded-full h-3">
                                        <div class="h-3 rounded-full transition-all {{ storage.usage_percentage > 90 ? 'bg-red-500' : (storage.usage_percentage > 75 ? 'bg-yellow-500' : 'bg-green-500') }}" 
                                             style="width: {{ storage.usage_percentage }}%"></div>
                                    </div>
                                </div>

                                <!-- Статистика места -->
                                <div class="grid grid-cols-3 gap-3 text-center">
                                    <div class="p-2 bg-gray-50 dark:bg-gray-700 rounded">
                                        <div class="text-sm font-semibold text-gray-800 dark:text-white">{{ storage.total_space_formatted }}</div>
                                        <div class="text-xs text-gray-500 dark:text-gray-400">Всего</div>
                                    </div>
                                    <div class="p-2 bg-blue-50 dark:bg-blue-900/30 rounded">
                                        <div class="text-sm font-semibold text-blue-600 dark:text-blue-400">{{ storage.used_space_formatted }}</div>
                                        <div class="text-xs text-gray-500 dark:text-gray-400">Занято</div>
                                    </div>
                                    <div class="p-2 bg-green-50 dark:bg-green-900/30 rounded">
                                        <div class="text-sm font-semibold text-green-600 dark:text-green-400">{{ storage.free_space_formatted }}</div>
                                        <div class="text-xs text-gray-500 dark:text-gray-400">Свободно</div>
                                    </div>
                                </div>
                            {% endif %}

                            <!-- Дополнительная информация -->
                            <div class="mt-4 pt-4 border-t border-gray-200 dark:border-gray-700 grid grid-cols-2 gap-2 text-xs">
                                <div class="text-gray-500 dark:text-gray-400">
                                    Тип: <span class="text-gray-700 dark:text-gray-300">{{ storage.is_remote ? 'Удалённое' : 'Локальное' }}</span>
                                </div>
                                {% if storage.connection_latency is defined and storage.connection_latency %}
                                <div class="text-gray-500 dark:text-gray-400">
                                    Задержка: <span class="text-gray-700 dark:text-gray-300">{{ storage.connection_latency|round(2) }} мс</span>
                                </div>
                                {% endif %}
                                {% if storage.server_info is defined and storage.server_info %}
                                <div class="text-gray-500 dark:text-gray-400 col-span-2">
                                    Сервер: <span class="text-gray-700 dark:text-gray-300">{{ storage.server_info }}</span>
                                </div>
                                {% endif %}
                                {% if storage.updated_at is defined %}
                                <div class="text-gray-500 dark:text-gray-400 col-span-2">
                                    Обновлено: <span class="text-gray-700 dark:text-gray-300">{{ storage.updated_at|date('d.m.Y H:i') }}</span>
                                </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
                </div>
            {% else %}
                <div class="text-center py-8">
                    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"/>
                    </svg>
                    <p class="mt-2 text-gray-500 dark:text-gray-400">Нет настроенных хранилищ</p>
                    <a href="{{ path('admin_storage') }}" class="mt-3 inline-block px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded hover:bg-blue-700">
                        Настроить хранилище
                    </a>
                </div>
            {% endif %}
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
        <!-- FFmpeg статус -->
        <div class="bg-white dark:bg-gray-800 rounded-md shadow">
            <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                <h2 class="text-lg font-semibold text-gray-800 dark:text-white">FFmpeg</h2>
            </div>
            <div class="p-6">
                {% set ffmpeg = system_health.checks.ffmpeg %}
                <div class="flex items-center gap-4 mb-4">
                    <div class="w-12 h-12 rounded-md flex items-center justify-center {{ ffmpeg.available ? 'bg-green-100 text-green-600' : 'bg-red-100 text-red-600' }}">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                        </svg>
                    </div>
                    <div>
                        <p class="font-medium text-gray-800 dark:text-white">
                            {{ ffmpeg.available ? 'FFmpeg доступен' : 'FFmpeg недоступен' }}
                        </p>
                        <p class="text-sm text-gray-500 dark:text-gray-400">
                            Обработка видео {{ ffmpeg.available ? 'работает' : 'невозможна' }}
                        </p>
                    </div>
                </div>
                
                {% if ffmpeg.capabilities is defined and ffmpeg.capabilities|length > 0 %}
                    <h3 class="font-medium text-gray-700 dark:text-gray-300 mb-2 text-sm">Поддерживаемые кодеки:</h3>
                    <div class="flex flex-wrap gap-2 mb-4">
                        {% for codec, supported in ffmpeg.capabilities %}
                            <span class="px-2 py-1 text-xs font-medium rounded {{ supported ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200' : 'bg-gray-100 text-gray-600 dark:bg-gray-700 dark:text-gray-400' }}">
                                {{ codec|upper }}
                            </span>
                        {% endfor %}
                    </div>
                {% endif %}

                {% if ffmpeg.requirements is defined %}
                    <h3 class="font-medium text-gray-700 dark:text-gray-300 mb-2 text-sm">Системные требования:</h3>
                    <div class="space-y-1 text-sm">
                        <div class="flex justify-between">
                            <span class="text-gray-500">Место на диске</span>
                            <span class="{{ ffmpeg.requirements.disk_space ? 'text-green-600' : 'text-red-600' }}">
                                {{ ffmpeg.requirements.disk_space ? '✓' : '✕' }}
                            </span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-500">Память</span>
                            <span class="{{ ffmpeg.requirements.memory_limit ? 'text-green-600' : 'text-red-600' }}">
                                {{ ffmpeg.requirements.memory_limit ? '✓' : '✕' }}
                            </span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-500">Временная директория</span>
                            <span class="{{ ffmpeg.requirements.temp_dir_writable ? 'text-green-600' : 'text-red-600' }}">
                                {{ ffmpeg.requirements.temp_dir_writable ? '✓' : '✕' }}
                            </span>
                        </div>
                    </div>
                {% endif %}

                <div class="mt-4 pt-4 border-t border-gray-200 dark:border-gray-700">
                    <button onclick="testFFmpeg()" class="px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded hover:bg-blue-700">
                        Тестировать FFmpeg
                    </button>
                </div>
            </div>
        </div>

        <!-- Дисковое пространство -->
        <div class="bg-white dark:bg-gray-800 rounded-md shadow">
            <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                <h2 class="text-lg font-semibold text-gray-800 dark:text-white">Дисковое пространство</h2>
            </div>
            <div class="p-6">
                {% if system_health.checks.disk_space.disks is defined %}
                    {% for disk_name, disk in system_health.checks.disk_space.disks %}
                        <div class="mb-4 last:mb-0">
                            <div class="flex justify-between items-center mb-2">
                                <span class="font-medium text-gray-700 dark:text-gray-300">{{ disk_name|title }}</span>
                                {% if disk.usage_percentage is defined %}
                                    <span class="text-sm {{ disk.usage_percentage > 90 ? 'text-red-600' : (disk.usage_percentage > 75 ? 'text-yellow-600' : 'text-green-600') }}">
                                        {{ disk.usage_percentage }}% использовано
                                    </span>
                                {% endif %}
                            </div>
                            {% if disk.usage_percentage is defined %}
                                <div class="w-full bg-gray-200 dark:bg-gray-600 rounded-full h-3 mb-2">
                                    <div class="h-3 rounded-full {{ disk.usage_percentage > 90 ? 'bg-red-500' : (disk.usage_percentage > 75 ? 'bg-yellow-500' : 'bg-green-500') }}" 
                                         style="width: {{ disk.usage_percentage }}%"></div>
                                </div>
                                <div class="flex justify-between text-xs text-gray-500 dark:text-gray-400">
                                    <span>Занято: {{ disk.used }}</span>
                                    <span>Свободно: {{ disk.free }}</span>
                                    <span>Всего: {{ disk.total }}</span>
                                </div>
                            {% elseif disk.error is defined %}
                                <p class="text-sm text-red-500">{{ disk.error }}</p>
                            {% endif %}
                        </div>
                    {% endfor %}
                {% else %}
                    <p class="text-gray-500">Нет данных о дисковом пространстве</p>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Метрики производительности -->
    <div class="bg-white dark:bg-gray-800 rounded-md shadow mb-6">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
            <h2 class="text-lg font-semibold text-gray-800 dark:text-white">Метрики производительности</h2>
        </div>
        <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                <!-- Память -->
                <div class="p-4 bg-gray-50 dark:bg-gray-700 rounded-md">
                    <h3 class="font-medium text-gray-700 dark:text-gray-300 mb-3">Использование памяти</h3>
                    {% if performance_metrics.memory_usage is defined %}
                        {% set memory = performance_metrics.memory_usage %}
                        {% set usage_percent = memory.limit > 0 ? ((memory.current / memory.limit) * 100)|round : 0 %}
                        <div class="w-full bg-gray-200 dark:bg-gray-600 rounded-full h-2 mb-3">
                            <div class="h-2 rounded-full {{ usage_percent > 80 ? 'bg-red-500' : (usage_percent > 60 ? 'bg-yellow-500' : 'bg-green-500') }}" 
                                 style="width: {{ usage_percent }}%"></div>
                        </div>
                        <div class="space-y-1 text-sm">
                            <div class="flex justify-between">
                                <span class="text-gray-500">Текущее:</span>
                                <span class="text-gray-700 dark:text-gray-300">{{ (memory.current / 1024 / 1024)|round(1) }} MB</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-500">Пиковое:</span>
                                <span class="text-gray-700 dark:text-gray-300">{{ (memory.peak / 1024 / 1024)|round(1) }} MB</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-500">Лимит:</span>
                                <span class="text-gray-700 dark:text-gray-300">{{ memory.limit == -1 ? '∞' : ((memory.limit / 1024 / 1024)|round(1) ~ ' MB') }}</span>
                            </div>
                        </div>
                    {% endif %}
                </div>

                <!-- База данных -->
                <div class="p-4 bg-gray-50 dark:bg-gray-700 rounded-md">
                    <h3 class="font-medium text-gray-700 dark:text-gray-300 mb-3">База данных</h3>
                    {% if performance_metrics.database is defined %}
                        {% set db = performance_metrics.database %}
                        <div class="space-y-2 text-sm">
                            <div class="flex justify-between">
                                <span class="text-gray-500">Всего видео:</span>
                                <span class="font-semibold text-gray-700 dark:text-gray-300">{{ db.total_videos }}</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-500">Опубликовано:</span>
                                <span class="font-semibold text-green-600">{{ db.published_videos }}</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-500">В обработке:</span>
                                <span class="font-semibold text-yellow-600">{{ db.processing_videos }}</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-500">Черновики:</span>
                                <span class="font-semibold text-gray-500">{{ db.draft_videos|default(0) }}</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-500">Отклонено:</span>
                                <span class="font-semibold text-red-600">{{ db.rejected_videos|default(0) }}</span>
                            </div>
                        </div>
                    {% endif %}
                </div>

                <!-- Кэш -->
                <div class="p-4 bg-gray-50 dark:bg-gray-700 rounded-md">
                    <h3 class="font-medium text-gray-700 dark:text-gray-300 mb-3">Кэширование</h3>
                    {% if performance_metrics.cache is defined %}
                        {% set cache = performance_metrics.cache %}
                        <div class="space-y-3">
                            <div class="flex items-center justify-between">
                                <span class="text-sm text-gray-500">OPcache</span>
                                <span class="px-3 py-1 text-xs font-medium rounded-full {{ cache.opcache_enabled ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-600' }}">
                                    {{ cache.opcache_enabled ? 'Включён' : 'Выключен' }}
                                </span>
                            </div>
                            <div class="flex items-center justify-between">
                                <span class="text-sm text-gray-500">APCu</span>
                                <span class="px-3 py-1 text-xs font-medium rounded-full {{ cache.apcu_enabled ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-600' }}">
                                    {{ cache.apcu_enabled ? 'Включён' : 'Выключен' }}
                                </span>
                            </div>
                        </div>
                    {% endif %}
                </div>

                <!-- PHP & Сервер -->
                <div class="p-4 bg-gray-50 dark:bg-gray-700 rounded-md">
                    <h3 class="font-medium text-gray-700 dark:text-gray-300 mb-3">PHP & Сервер</h3>
                    {% if performance_metrics.php is defined %}
                        {% set php = performance_metrics.php %}
                        <div class="space-y-1 text-sm">
                            <div class="flex justify-between">
                                <span class="text-gray-500">PHP:</span>
                                <span class="text-gray-700 dark:text-gray-300">{{ php.version }}</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-500">Max upload:</span>
                                <span class="text-gray-700 dark:text-gray-300">{{ php.upload_max_filesize }}</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-500">Post max:</span>
                                <span class="text-gray-700 dark:text-gray-300">{{ php.post_max_size }}</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-500">Max time:</span>
                                <span class="text-gray-700 dark:text-gray-300">{{ php.max_execution_time }}s</span>
                            </div>
                        </div>
                    {% endif %}
                    {% if performance_metrics.server is defined %}
                        {% set server = performance_metrics.server %}
                        <div class="mt-3 pt-3 border-t border-gray-200 dark:border-gray-600 space-y-1 text-sm">
                            <div class="flex justify-between">
                                <span class="text-gray-500">ОС:</span>
                                <span class="text-gray-700 dark:text-gray-300">{{ server.os }}</span>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Очередь обработки -->
    {% if system_health.checks.processing_queue is defined %}
    <div class="bg-white dark:bg-gray-800 rounded-md shadow mb-6">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
            <h2 class="text-lg font-semibold text-gray-800 dark:text-white">Очередь обработки видео</h2>
        </div>
        <div class="p-6">
            {% set queue = system_health.checks.processing_queue %}
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                <div class="text-center p-4 bg-gray-50 dark:bg-gray-700 rounded-md">
                    <div class="text-2xl font-bold text-gray-600 dark:text-gray-300">{{ queue.stats.pending|default(0) }}</div>
                    <div class="text-sm text-gray-500 dark:text-gray-400">Ожидают</div>
                </div>
                <div class="text-center p-4 bg-yellow-50 dark:bg-yellow-900/30 rounded-md">
                    <div class="text-2xl font-bold text-yellow-600 dark:text-yellow-400">{{ queue.stats.processing|default(0) }}</div>
                    <div class="text-sm text-gray-500 dark:text-gray-400">В обработке</div>
                </div>
                <div class="text-center p-4 bg-green-50 dark:bg-green-900/30 rounded-md">
                    <div class="text-2xl font-bold text-green-600 dark:text-green-400">{{ queue.stats.published|default(0) }}</div>
                    <div class="text-sm text-gray-500 dark:text-gray-400">Опубликовано</div>
                </div>
                <div class="text-center p-4 bg-red-50 dark:bg-red-900/30 rounded-md">
                    <div class="text-2xl font-bold text-red-600 dark:text-red-400">{{ queue.stats.failed|default(0) }}</div>
                    <div class="text-sm text-gray-500 dark:text-gray-400">Ошибки</div>
                </div>
            </div>
            
            {% if queue.stuck_videos is defined and queue.stuck_videos > 0 %}
            <div class="mt-4 p-4 bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-800 rounded-md">
                <div class="flex items-center gap-2">
                    <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                    </svg>
                    <span class="text-yellow-800 dark:text-yellow-200 font-medium">
                        Обнаружено {{ queue.stuck_videos }} застрявших видео в обработке (более 2 часов)
                    </span>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
    {% endif %}

    <!-- Действия -->
    <div class="bg-white dark:bg-gray-800 rounded-md shadow">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
            <h2 class="text-lg font-semibold text-gray-800 dark:text-white">Действия</h2>
        </div>
        <div class="p-6 flex flex-wrap gap-4">
            <button onclick="location.reload()" class="px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded hover:bg-blue-700 flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                </svg>
                Обновить данные
            </button>
            <button onclick="clearCache()" class="px-4 py-2 bg-yellow-600 text-white text-sm font-medium rounded hover:bg-yellow-700 flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                </svg>
                Очистить кэш
            </button>
        </div>
    </div>

    <!-- Блок оптимизации и мониторинга -->
    <div class="bg-white dark:bg-gray-800 rounded-md shadow">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
            <h2 class="text-lg font-semibold text-gray-800 dark:text-white">Оптимизация и мониторинг</h2>
        </div>
        <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <!-- Кнопка мониторинга -->
                <div class="p-4 border border-gray-200 dark:border-gray-700 rounded-md hover:shadow-md transition-shadow">
                    <div class="flex items-center gap-3 mb-3">
                        <div class="w-10 h-10 rounded-md bg-blue-100 dark:bg-blue-900 flex items-center justify-center">
                            <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                            </svg>
                        </div>
                        <div>
                            <h3 class="font-semibold text-gray-800 dark:text-white">Мониторинг</h3>
                            <p class="text-xs text-gray-500 dark:text-gray-400">Статистика таблиц БД</p>
                        </div>
                    </div>
                    <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
                        Просмотрите статистику таблиц базы данных и использование индексов.
                    </p>
                    <button onclick="runMonitor()" class="w-full px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded hover:bg-blue-700 transition-colors">
                        Запустить мониторинг
                    </button>
                </div>

                <!-- Кнопка тестирования производительности -->
                <div class="p-4 border border-gray-200 dark:border-gray-700 rounded-md hover:shadow-md transition-shadow">
                    <div class="flex items-center gap-3 mb-3">
                        <div class="w-10 h-10 rounded-md bg-green-100 dark:bg-green-900 flex items-center justify-center">
                            <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                            </svg>
                        </div>
                        <div>
                            <h3 class="font-semibold text-gray-800 dark:text-white">Тестирование</h3>
                            <p class="text-xs text-gray-500 dark:text-gray-400">Производительность</p>
                        </div>
                    </div>
                    <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
                        Запустите тесты производительности оптимизированных методов.
                    </p>
                    <button onclick="runPerformanceTest()" class="w-full px-4 py-2 bg-green-600 text-white text-sm font-medium rounded hover:bg-green-700 transition-colors">
                        Запустить тест
                    </button>
                </div>

                <!-- Кнопка очистки кэша -->
                <div class="p-4 border border-gray-200 dark:border-gray-700 rounded-md hover:shadow-md transition-shadow">
                    <div class="flex items-center gap-3 mb-3">
                        <div class="w-10 h-10 rounded-md bg-orange-100 dark:bg-orange-900 flex items-center justify-center">
                            <svg class="w-6 h-6 text-orange-600 dark:text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                            </svg>
                        </div>
                        <div>
                            <h3 class="font-semibold text-gray-800 dark:text-white">Очистка кэша</h3>
                            <p class="text-xs text-gray-500 dark:text-gray-400">Оптимизированный кэш</p>
                        </div>
                    </div>
                    <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
                        Очистите весь оптимизированный кэш приложения.
                    </p>
                    <button onclick="clearOptimizedCache()" class="w-full px-4 py-2 bg-orange-600 text-white text-sm font-medium rounded hover:bg-orange-700 transition-colors">
                        Очистить кэш
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function clearCache() {
    if (confirm('Вы уверены, что хотите очистить кэш?')) {
        fetch('{{ path('admin_system_clear_cache') }}', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-Requested-With': 'XMLHttpRequest'
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert('Кэш успешно очищен');
                location.reload();
            } else {
                alert('Ошибка: ' + data.error);
            }
        })
        .catch(error => {
            alert('Ошибка: ' + error.message);
        });
    }
}

function testFFmpeg() {
    const button = event.target;
    button.disabled = true;
    button.textContent = 'Тестирование...';
    
    fetch('{{ path('admin_system_test_ffmpeg') }}', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'X-Requested-With': 'XMLHttpRequest'
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            alert('FFmpeg работает корректно');
        } else {
            alert('Ошибка FFmpeg: ' + data.error);
        }
    })
    .catch(error => {
        alert('Ошибка: ' + error.message);
    })
    .finally(() => {
        button.disabled = false;
        button.textContent = 'Тестировать FFmpeg';
    });
}

function runMonitor() {
    const button = event.target;
    button.disabled = true;
    button.textContent = 'Выполняется...';
    
    fetch('{{ path('admin_system_run_monitor') }}', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'X-Requested-With': 'XMLHttpRequest'
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            showModal('Результаты мониторинга', data.output);
        } else {
            alert('Ошибка: ' + data.error);
        }
    })
    .catch(error => {
        alert('Ошибка: ' + error.message);
    })
    .finally(() => {
        button.disabled = false;
        button.textContent = 'Запустить мониторинг';
    });
}

function runPerformanceTest() {
    const button = event.target;
    button.disabled = true;
    button.textContent = 'Выполняется...';
    
    fetch('{{ path('admin_system_run_performance_test') }}', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'X-Requested-With': 'XMLHttpRequest'
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            showModal('Результаты тестирования производительности', data.output);
        } else {
            alert('Ошибка: ' + data.error);
        }
    })
    .catch(error => {
        alert('Ошибка: ' + error.message);
    })
    .finally(() => {
        button.disabled = false;
        button.textContent = 'Запустить тест';
    });
}

function clearOptimizedCache() {
    if (!confirm('Вы уверены? Это очистит весь оптимизированный кэш.')) {
        return;
    }
    
    const button = event.target;
    button.disabled = true;
    button.textContent = 'Выполняется...';
    
    fetch('{{ path('admin_system_clear_optimized_cache') }}', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'X-Requested-With': 'XMLHttpRequest'
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            alert('Кэш успешно очищен');
            showModal('Результаты очистки кэша', data.output);
        } else {
            alert('Ошибка: ' + data.error);
        }
    })
    .catch(error => {
        alert('Ошибка: ' + error.message);
    })
    .finally(() => {
        button.disabled = false;
        button.textContent = 'Очистить кэш';
    });
}

function showModal(title, content) {
    const modal = document.createElement('div');
    modal.className = 'fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50';
    modal.innerHTML = `
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg max-w-2xl w-full mx-4 max-h-96 overflow-auto">
            <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700 flex justify-between items-center">
                <h3 class="text-lg font-semibold text-gray-800 dark:text-white">${title}</h3>
                <button onclick="this.closest('.fixed').remove()" class="text-gray-500 hover:text-gray-700">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </button>
            </div>
            <div class="p-6">
                <pre class="bg-gray-50 dark:bg-gray-900 p-4 rounded text-sm text-gray-700 dark:text-gray-300 overflow-auto max-h-64">${escapeHtml(content)}</pre>
            </div>
            <div class="px-6 py-4 border-t border-gray-200 dark:border-gray-700 flex justify-end">
                <button onclick="this.closest('.fixed').remove()" class="px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-700">
                    Закрыть
                </button>
            </div>
        </div>
    `;
    document.body.appendChild(modal);
}

function escapeHtml(text) {
    const map = {
        '&': '&amp;',
        '<': '&lt;',
        '>': '&gt;',
        '"': '&quot;',
        "'": '&#039;'
    };
    return text.replace(/[&<>"']/g, m => map[m]);
}
</script>
{% endblock %}
