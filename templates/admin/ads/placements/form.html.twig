{% extends 'admin/base.html.twig' %}

{% block title %}{{ placement ? 'Редактировать место размещения' : 'Создать место размещения' }}{% endblock %}
{% block page_title %}{{ placement ? 'Редактировать место размещения' : 'Создать место размещения' }}{% endblock %}

{% block content %}
<div class="max-w-2xl mx-auto">
    <form method="POST" class="space-y-6">
        <div class="bg-white shadow rounded-md">
            <div class="px-6 py-4 border-b border-gray-200">
                <h3 class="text-lg font-medium text-gray-900">Основная информация</h3>
            </div>
            <div class="p-6 space-y-4">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label for="name" class="block text-sm font-medium text-gray-700">Название</label>
                        <input type="text" name="name" id="name" required
                               value="{{ placement ? placement.name : '' }}"
                               class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500">
                    </div>
                    
                    <div>
                        <label for="slug" class="block text-sm font-medium text-gray-700">Slug</label>
                        <input type="text" name="slug" id="slug"
                               value="{{ placement ? placement.slug : '' }}"
                               class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500">
                        <p class="mt-1 text-xs text-gray-500">Оставьте пустым для автогенерации</p>
                    </div>
                </div>

                <div>
                    <label for="description" class="block text-sm font-medium text-gray-700">Описание</label>
                    <textarea name="description" id="description" rows="3"
                              class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500">{{ placement ? placement.description : '' }}</textarea>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label for="type" class="block text-sm font-medium text-gray-700">Тип</label>
                        <select name="type" id="type" required
                                class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500">
                            <option value="banner" {{ placement and placement.type == 'banner' ? 'selected' : '' }}>Баннер</option>
                            <option value="video" {{ placement and placement.type == 'video' ? 'selected' : '' }}>Видео</option>
                            <option value="vast" {{ placement and placement.type == 'vast' ? 'selected' : '' }}>VAST</option>
                            <option value="native" {{ placement and placement.type == 'native' ? 'selected' : '' }}>Нативная</option>
                            <option value="text" {{ placement and placement.type == 'text' ? 'selected' : '' }}>Текст</option>
                            <option value="popup" {{ placement and placement.type == 'popup' ? 'selected' : '' }}>Popup</option>
                        </select>
                    </div>

                    <div>
                        <label for="position" class="block text-sm font-medium text-gray-700">Позиция</label>
                        <select name="position" id="position" required
                                class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500">
                            <option value="header" {{ placement and placement.position == 'header' ? 'selected' : '' }}>Шапка</option>
                            <option value="sidebar" {{ placement and placement.position == 'sidebar' ? 'selected' : '' }}>Сайдбар</option>
                            <option value="content" {{ placement and placement.position == 'content' ? 'selected' : '' }}>Контент</option>
                            <option value="footer" {{ placement and placement.position == 'footer' ? 'selected' : '' }}>Подвал</option>
                            <option value="video_preroll" {{ placement and placement.position == 'video_preroll' ? 'selected' : '' }}>Preroll (до видео)</option>
                            <option value="video_midroll" {{ placement and placement.position == 'video_midroll' ? 'selected' : '' }}>Midroll (в середине)</option>
                            <option value="video_postroll" {{ placement and placement.position == 'video_postroll' ? 'selected' : '' }}>Postroll (после видео)</option>
                            <option value="video_overlay" {{ placement and placement.position == 'video_overlay' ? 'selected' : '' }}>Overlay (поверх видео)</option>
                            <option value="between_videos" {{ placement and placement.position == 'between_videos' ? 'selected' : '' }}>Между видео</option>
                        </select>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <div>
                        <label for="width" class="block text-sm font-medium text-gray-700">Ширина (px)</label>
                        <input type="number" name="width" id="width" min="1"
                               value="{{ placement ? placement.width : '' }}"
                               class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500">
                    </div>

                    <div>
                        <label for="height" class="block text-sm font-medium text-gray-700">Высота (px)</label>
                        <input type="number" name="height" id="height" min="1"
                               value="{{ placement ? placement.height : '' }}"
                               class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500">
                    </div>

                    <div>
                        <label for="order_position" class="block text-sm font-medium text-gray-700">Порядок</label>
                        <input type="number" name="order_position" id="order_position" min="0"
                               value="{{ placement ? placement.orderPosition : 0 }}"
                               class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500">
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-3">Разрешенные страницы</label>
                    <div class="grid grid-cols-2 md:grid-cols-3 gap-2">
                        {% set allowedPages = placement ? placement.allowedPages|default([]) : [] %}
                        {% set pages = ['home', 'videos', 'video_detail', 'categories', 'search', 'upload', 'profile'] %}
                        {% set pageLabels = {
                            'home': 'Главная',
                            'videos': 'Список видео',
                            'video_detail': 'Страница видео',
                            'categories': 'Категории',
                            'search': 'Поиск',
                            'upload': 'Загрузка',
                            'profile': 'Профиль'
                        } %}
                        
                        {% for page in pages %}
                            <label class="flex items-center">
                                <input type="checkbox" name="allowed_pages[]" value="{{ page }}"
                                       {{ page in allowedPages ? 'checked' : '' }}
                                       class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                                <span class="ml-2 text-sm text-gray-700">{{ pageLabels[page] }}</span>
                            </label>
                        {% endfor %}
                    </div>
                    <p class="mt-2 text-xs text-gray-500">Если ничего не выбрано, реклама будет показываться на всех страницах</p>
                </div>

                <div class="flex items-center">
                    <input type="checkbox" name="is_active" id="is_active" value="1"
                           {{ placement and placement.isActive ? 'checked' : (not placement ? 'checked' : '') }}
                           class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                    <label for="is_active" class="ml-2 block text-sm text-gray-900">Активно</label>
                </div>
            </div>
        </div>

        <div class="flex justify-end space-x-3">
            <a href="{{ path('admin_ads_placements') }}" 
               class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                Отмена
            </a>
            <button type="submit" 
                    class="bg-blue-600 py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                {{ placement ? 'Сохранить изменения' : 'Создать место размещения' }}
            </button>
        </div>
    </form>
</div>
{% endblock %}