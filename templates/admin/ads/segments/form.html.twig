{% extends 'admin/base.html.twig' %}

{% block title %}{{ segment ? 'Редактировать сегмент' : 'Новый сегмент' }}{% endblock %}
{% block page_title %}{{ segment ? 'Редактировать сегмент' : 'Новый сегмент' }}{% endblock %}

{% block content %}
<div class="mb-6">
    <a href="{{ path('admin_ads_segments') }}" class="text-blue-600 hover:text-blue-800">← Назад к списку</a>
</div>

<form method="POST" class="bg-white rounded-md shadow p-6 max-w-2xl">
    <div class="space-y-6">
            <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Название *</label>
                <input type="text" name="name" id="name" required
                       value="{{ segment ? segment.name : '' }}"
                       class="w-full px-3 py-2 border border-gray-300 rounded-md bg-white text-gray-900">
            </div>

            <div>
                <label for="slug" class="block text-sm font-medium text-gray-700 mb-1">Slug</label>
                <input type="text" name="slug" id="slug"
                       value="{{ segment ? segment.slug : '' }}"
                       placeholder="Оставьте пустым для автогенерации"
                       class="w-full px-3 py-2 border border-gray-300 rounded-md bg-white text-gray-900">
            </div>

            <div>
                <label for="type" class="block text-sm font-medium text-gray-700 mb-1">Тип</label>
                <select name="type" id="type" class="w-full px-3 py-2 border border-gray-300 rounded-md bg-white text-gray-900">
                    <option value="custom" {{ segment and segment.type == 'custom' ? 'selected' : '' }}>Пользовательский</option>
                    <option value="geo" {{ segment and segment.type == 'geo' ? 'selected' : '' }}>Географический</option>
                    <option value="behavior" {{ segment and segment.type == 'behavior' ? 'selected' : '' }}>Поведенческий</option>
                    <option value="demographic" {{ segment and segment.type == 'demographic' ? 'selected' : '' }}>Демографический</option>
                </select>
            </div>

            <div>
                <label for="description" class="block text-sm font-medium text-gray-700 mb-1">Описание</label>
                <textarea name="description" id="description" rows="3"
                          class="w-full px-3 py-2 border border-gray-300 rounded-md bg-white text-gray-900">{{ segment ? segment.description : '' }}</textarea>
            </div>

            <div>
                <label for="rules" class="block text-sm font-medium text-gray-700 mb-1">Правила (JSON)</label>
                <textarea name="rules" id="rules" rows="5"
                          placeholder='{"country": ["RU", "BY"], "min_age": 18}'
                          class="w-full px-3 py-2 border border-gray-300 rounded-md bg-white text-gray-900 font-mono text-sm">{{ segment and segment.rules ? segment.rules|json_encode(constant('JSON_PRETTY_PRINT')) : '' }}</textarea>
            </div>

            <div class="flex items-center">
                <input type="checkbox" name="is_active" id="is_active" value="1"
                       {{ (not segment) or segment.isActive ? 'checked' : '' }}
                       class="h-4 w-4 text-blue-600 border-gray-300 rounded">
                <label for="is_active" class="ml-2 text-sm text-gray-700">Активен</label>
            </div>
        </div>

        <div class="mt-6 flex gap-4">
            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-md">
                Сохранить
            </button>
            <a href="{{ path('admin_ads_segments') }}" class="bg-gray-300 hover:bg-gray-400 text-gray-800 px-6 py-2 rounded-md">
                Отмена
            </a>
        </div>
    </form>
{% endblock %}
