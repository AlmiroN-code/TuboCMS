{% extends 'admin/base.html.twig' %}

{% block title %}Сегменты аудитории{% endblock %}
{% block page_title %}Сегменты аудитории{% endblock %}

{% block content %}
<div class="mb-6 flex justify-between items-center">
    <div class="flex items-center space-x-4">
        <h1 class="text-2xl font-bold text-gray-900">Сегменты аудитории</h1>
        <span class="bg-blue-100 text-blue-800 text-sm font-medium px-2.5 py-0.5 rounded">
            {{ segments|length }} сегментов
        </span>
    </div>
    <a href="{{ path('admin_ads_segments_new') }}" 
       class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition">
        <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        Создать сегмент
    </a>
</div>

{% if segments|length > 0 %}
<div class="bg-white shadow rounded-md overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Название</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Slug</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Тип</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Статус</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Действия</th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            {% for segment in segments %}
            <tr class="hover:bg-gray-50">
                <td class="px-6 py-4">
                    <div class="text-sm font-medium text-gray-900">{{ segment.name }}</div>
                    {% if segment.description %}
                    <div class="text-sm text-gray-500">{{ segment.description|slice(0, 50) }}{% if segment.description|length > 50 %}...{% endif %}</div>
                    {% endif %}
                </td>
                <td class="px-6 py-4 text-sm text-gray-500">{{ segment.slug }}</td>
                <td class="px-6 py-4 text-sm text-gray-500">
                    {% set typeLabels = {'custom': 'Пользовательский', 'geo': 'Географический', 'behavior': 'Поведенческий', 'demographic': 'Демографический'} %}
                    {{ typeLabels[segment.type]|default(segment.type) }}
                </td>
                <td class="px-6 py-4">
                    {% if segment.isActive %}
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Активен</span>
                    {% else %}
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">Неактивен</span>
                    {% endif %}
                </td>
                <td class="px-6 py-4 text-right text-sm">
                    <a href="{{ path('admin_ads_segments_edit', {id: segment.id}) }}" class="text-blue-600 hover:text-blue-900 mr-3">Редактировать</a>
                    <form action="{{ path('admin_ads_segments_delete', {id: segment.id}) }}" method="POST" class="inline" onsubmit="return confirm('Удалить сегмент?')">
                        <button type="submit" class="text-red-600 hover:text-red-900">Удалить</button>
                    </form>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% else %}
<div class="text-center py-12">
    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
    </svg>
    <h3 class="mt-2 text-sm font-medium text-gray-900">Нет сегментов</h3>
    <p class="mt-1 text-sm text-gray-500">Создайте первый сегмент аудитории.</p>
    <div class="mt-6">
        <a href="{{ path('admin_ads_segments_new') }}" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
            Создать сегмент
        </a>
    </div>
</div>
{% endif %}
{% endblock %}
