{% extends 'admin/base.html.twig' %}
{% import 'admin/_pagination_selector.html.twig' as pagination %}

{% block title %}Управление каналами{% endblock %}

{% block page_title %}
<svg class="w-6 h-6 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z"></path>
</svg>
Управление каналами
{% endblock %}

{% block content %}
<div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
        <form method="GET" class="flex items-center justify-between">
            <div class="flex items-center space-x-4">
                {{ pagination.perPageSelector(perPage, total_channels) }}
                
                <div class="flex items-center space-x-2">
                    <label for="status" class="text-sm font-medium text-gray-700">Статус:</label>
                    <select id="status" name="status" 
                            class="px-3 py-2 border border-gray-300 rounded-md text-sm bg-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors">
                        <option value="">Все</option>
                        <option value="active" {{ filters.status|default('') == 'active' ? 'selected' : '' }}>Активные</option>
                        <option value="inactive" {{ filters.status|default('') == 'inactive' ? 'selected' : '' }}>Неактивные</option>
                        <option value="verified" {{ filters.status|default('') == 'verified' ? 'selected' : '' }}>Верифицированные</option>
                    </select>
                </div>
                <div class="flex items-center space-x-2">
                    <label for="search" class="text-sm font-medium text-gray-700">Поиск:</label>
                    <input type="text" id="search" name="search" placeholder="Название канала..." 
                           value="{{ filters.search|default('') }}"
                           class="px-3 py-2 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors">
                </div>
                <button type="submit" 
                        class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
                    <i class="fas fa-search mr-2"></i>Применить
                </button>
                <a href="{{ path('admin_channels_index') }}" 
                   class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
                    <i class="fas fa-times mr-2"></i>Сбросить
                </a>
            </div>
            <a href="{{ path('admin_channels_create') }}" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors">
                <i class="fas fa-plus mr-2"></i>Создать канал
            </a>
        </form>
    </div>

    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Канал</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Владелец</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Статистика</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Статус</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Создан</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Действия</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for channel in channels %}
                <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="flex items-center">
                            <div class="flex-shrink-0 h-10 w-10">
                                {% if channel_avatar(channel.avatar) %}
                                    <img class="h-10 w-10 rounded-full object-cover" src="{{ channel_avatar(channel.avatar) }}" alt="{{ channel.name }}">
                                {% else %}
                                    <div class="h-10 w-10 rounded-full bg-gray-300 flex items-center justify-center">
                                        <i class="fas fa-tv text-gray-600"></i>
                                    </div>
                                {% endif %}
                            </div>
                            <div class="ml-4">
                                <div class="flex items-center">
                                    <div class="text-sm font-medium text-gray-900">{{ channel.name }}</div>
                                    {% if channel.isVerified %}
                                        <i class="fas fa-check-circle text-blue-500 ml-1" title="Верифицированный канал"></i>
                                    {% endif %}
                                </div>
                                <div class="text-sm text-gray-500">{{ channel.slug }}</div>
                            </div>
                        </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm text-gray-900">{{ channel.owner.username }}</div>
                        <div class="text-sm text-gray-500">{{ channel.owner.email }}</div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        <div>{{ channel.videosCount }} видео</div>
                        <div>{{ channel.subscribersCount }} подписчиков</div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="flex flex-col space-y-1">
                            {% if channel.isActive %}
                                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Активный</span>
                            {% else %}
                                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">Неактивный</span>
                            {% endif %}
                            {% if channel.isVerified %}
                                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">Верифицирован</span>
                            {% endif %}
                        </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        {{ channel.createdAt|date('d.m.Y H:i') }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <div class="flex items-center justify-end space-x-2">
                            <a href="{{ path('channel_show', {slug: channel.slug}) }}" 
                               class="inline-flex items-center justify-center w-8 h-8 text-blue-600 hover:text-blue-900 hover:bg-blue-50 rounded-md transition-colors" 
                               title="Просмотр" target="_blank">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="{{ path('admin_channels_edit', {id: channel.id}) }}" 
                               class="inline-flex items-center justify-center w-8 h-8 text-indigo-600 hover:text-indigo-900 hover:bg-indigo-50 rounded-md transition-colors" 
                               title="Редактировать">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form method="post" action="{{ path('admin_channels_toggle_verification', {id: channel.id}) }}" class="inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('toggle_verification_' ~ channel.id) }}">
                                <button type="submit" 
                                        class="inline-flex items-center justify-center w-8 h-8 text-yellow-600 hover:text-yellow-900 hover:bg-yellow-50 rounded-md transition-colors" 
                                        title="{{ channel.isVerified ? 'Убрать верификацию' : 'Верифицировать' }}">
                                    <i class="fas fa-{{ channel.isVerified ? 'times-circle' : 'check-circle' }}"></i>
                                </button>
                            </form>
                            <form method="post" action="{{ path('admin_channels_toggle_active', {id: channel.id}) }}" class="inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('toggle_active_' ~ channel.id) }}">
                                <button type="submit" 
                                        class="inline-flex items-center justify-center w-8 h-8 text-{{ channel.isActive ? 'red' : 'green' }}-600 hover:text-{{ channel.isActive ? 'red' : 'green' }}-900 hover:bg-{{ channel.isActive ? 'red' : 'green' }}-50 rounded-md transition-colors" 
                                        title="{{ channel.isActive ? 'Деактивировать' : 'Активировать' }}">
                                    <i class="fas fa-{{ channel.isActive ? 'ban' : 'check' }}"></i>
                                </button>
                            </form>
                            <form method="post" action="{{ path('admin_channels_delete', {id: channel.id}) }}" 
                                  class="inline" onsubmit="return confirm('Вы уверены, что хотите удалить этот канал?')">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete_channel_' ~ channel.id) }}">
                                <button type="submit" 
                                        class="inline-flex items-center justify-center w-8 h-8 text-red-600 hover:text-red-900 hover:bg-red-50 rounded-md transition-colors" 
                                        title="Удалить">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="6" class="px-6 py-4 text-center text-gray-500">
                        Каналы не найдены
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    {% if total_pages > 1 %}
    <div class="bg-white px-4 py-3 border-t border-gray-200 sm:px-6">
        <div class="flex items-center justify-between">
            <div class="flex-1 flex justify-between sm:hidden">
                {% if current_page > 1 %}
                    <a href="{{ path('admin_channels_index', {page: current_page - 1, per_page: perPage}) }}" 
                       class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                        Предыдущая
                    </a>
                {% endif %}
                {% if current_page < total_pages %}
                    <a href="{{ path('admin_channels_index', {page: current_page + 1, per_page: perPage}) }}" 
                       class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                        Следующая
                    </a>
                {% endif %}
            </div>
            <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
                <div>
                    <p class="text-sm text-gray-700">
                        Показано <span class="font-medium">{{ ((current_page - 1) * 20 + 1) }}</span> - 
                        <span class="font-medium">{{ min(current_page * 20, total_channels) }}</span> из 
                        <span class="font-medium">{{ total_channels }}</span> каналов
                    </p>
                </div>
                <div>
                    <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px">
                        {% for page in 1..total_pages %}
                            {% if page == current_page %}
                                <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-blue-50 text-sm font-medium text-blue-600">
                                    {{ page }}
                                </span>
                            {% else %}
                                <a href="{{ path('admin_channels_index', {page: page, per_page: perPage}) }}" 
                                   class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                    {{ page }}
                                </a>
                            {% endif %}
                        {% endfor %}
                    </nav>
                </div>
            </div>
        </div>
    </div>
    {% endif %}
</div>

{{ pagination.updateUrlScript() }}
{% endblock %}
