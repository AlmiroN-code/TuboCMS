{% extends 'admin/base.html.twig' %}
{% import 'admin/_pagination_selector.html.twig' as pagination %}

{% block title %}Управление постами{% endblock %}
{% block page_title %}
<svg class="w-6 h-6 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
</svg>
Посты
{% endblock %}

{% block content %}
<div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
        <div class="flex items-center gap-4">
            <h3 class="text-lg font-medium text-gray-900">Все посты</h3>
            {{ pagination.perPageSelector(perPage, total) }}
        </div>
        <div class="flex gap-2">
            <a href="{{ path('admin_post_new') }}" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium">
                Создать пост
            </a>
        </div>
    </div>

    {# Фильтры #}
    <div class="px-6 py-3 bg-gray-50 border-b border-gray-200">
        <div class="flex gap-4 items-center">
            <div class="flex gap-2">
                <a href="{{ path('admin_posts') }}" 
                   class="px-3 py-1 text-sm rounded {{ current_status is null ? 'bg-blue-100 text-blue-800' : 'text-gray-600 hover:text-gray-900' }}">
                    Все
                </a>
                <a href="{{ path('admin_posts', {status: 'published'}) }}" 
                   class="px-3 py-1 text-sm rounded {{ current_status == 'published' ? 'bg-green-100 text-green-800' : 'text-gray-600 hover:text-gray-900' }}">
                    Опубликованные
                </a>
                <a href="{{ path('admin_posts', {status: 'draft'}) }}" 
                   class="px-3 py-1 text-sm rounded {{ current_status == 'draft' ? 'bg-yellow-100 text-yellow-800' : 'text-gray-600 hover:text-gray-900' }}">
                    Черновики
                </a>
            </div>
        </div>
    </div>

    {% if posts|length > 0 %}
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Заголовок</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Автор</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Статус</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Категории</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Дата</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Действия</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for post in posts %}
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    {% if post.featuredImage %}
                                        <img src="/media/posts/{{ post.featuredImage }}" alt="" class="w-10 h-10 rounded object-cover mr-3">
                                    {% endif %}
                                    <div>
                                        <div class="text-sm font-medium text-gray-900">
                                            {{ post.title }}
                                            {% if post.parent %}
                                                <span class="text-xs text-gray-500">(дочерний)</span>
                                            {% endif %}
                                        </div>
                                        <div class="text-sm text-gray-500">{{ post.slug }}</div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                {{ post.author.username }}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                                    {{ post.status == 'published' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' }}">
                                    {{ post.status == 'published' ? 'Опубликован' : 'Черновик' }}
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                {% for category in post.categories %}
                                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800 mr-1">
                                        {{ category.name }}
                                    </span>
                                {% endfor %}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                {{ post.updatedAt|date('d.m.Y H:i') }}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                <div class="flex gap-2">
                                    {% if post.isPublished %}
                                        <a href="{{ path('app_post_show', {slug: post.fullSlug}) }}" target="_blank" 
                                           class="text-blue-600 hover:text-blue-900" title="Просмотр">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                            </svg>
                                        </a>
                                    {% endif %}
                                    <a href="{{ path('admin_post_edit', {id: post.id}) }}" 
                                       class="text-indigo-600 hover:text-indigo-900" title="Редактировать">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                        </svg>
                                    </a>
                                    <form method="post" action="{{ path('admin_post_delete', {id: post.id}) }}" class="inline" 
                                          onsubmit="return confirm('Вы уверены, что хотите удалить этот пост?')">
                                        <button type="submit" class="text-red-600 hover:text-red-900" title="Удалить">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                            </svg>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        {# Пагинация #}
        {% if total_pages > 1 %}
            <div class="px-6 py-3 border-t border-gray-200 flex justify-center">
                <div class="flex gap-2">
                    {% if page > 1 %}
                        <a href="{{ path('admin_posts', {page: page - 1, status: current_status, per_page: perPage}) }}" 
                           class="px-3 py-2 bg-white border border-gray-300 rounded-md text-sm text-gray-700 hover:bg-gray-50">
                            ← Предыдущая
                        </a>
                    {% endif %}
                    
                    <span class="px-3 py-2 bg-blue-600 text-white rounded-md text-sm">
                        Страница {{ page }} из {{ total_pages }}
                    </span>
                    
                    {% if page < total_pages %}
                        <a href="{{ path('admin_posts', {page: page + 1, status: current_status, per_page: perPage}) }}" 
                           class="px-3 py-2 bg-white border border-gray-300 rounded-md text-sm text-gray-700 hover:bg-gray-50">
                            Следующая →
                        </a>
                    {% endif %}
                </div>
            </div>
        {% endif %}
    {% else %}
        <div class="px-6 py-12 text-center">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">Нет постов</h3>
            <p class="mt-1 text-sm text-gray-500">Начните с создания первого поста.</p>
            <div class="mt-6">
                <a href="{{ path('admin_post_new') }}" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium">
                    Создать пост
                </a>
            </div>
        </div>
    {% endif %}
</div>

{{ pagination.updateUrlScript() }}
{% endblock %}