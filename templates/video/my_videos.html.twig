{% extends 'base.html.twig' %}

{% set breadcrumbs = [
    {'label': 'breadcrumb.home'|trans, 'url': path('app_home')},
    {'label': 'video.my_videos'|trans, 'url': ''}
] %}

{% block title %}{{ 'video.my_videos'|trans }}{% endblock %}

{% block body %}
<div x-data="{
         selectedVideos: [],
         showModal: false,
         channels: [],
         selectedChannel: '',
         get selectedCount() { return this.selectedVideos.length },
         get bulkBtnDisabled() { return this.selectedCount === 0 },
         toggleAll(event) {
             if (event.target.checked) {
                 this.selectedVideos = Array.from(document.querySelectorAll('.video-checkbox')).map(cb => cb.value);
             } else {
                 this.selectedVideos = [];
             }
         },
         async openChannelModal() {
             if (this.selectedCount === 0) {
                 alert('Не выбрано ни одного видео');
                 return;
             }
             await this.loadChannels();
             this.showModal = true;
         },
         async loadChannels() {
             try {
                 const response = await fetch('/api/videos/user-channels');
                 const data = await response.json();
                 if (data.success) {
                     this.channels = data.channels;
                 }
             } catch (error) {
                 console.error('Error loading channels:', error);
                 alert('Ошибка загрузки каналов');
             }
         },
         async applyChannelChange() {
             if (this.selectedCount === 0) {
                 alert('Не выбрано ни одного видео');
                 return;
             }
             try {
                 const response = await fetch('/api/videos/bulk-move-to-channel', {
                     method: 'POST',
                     headers: { 'Content-Type': 'application/json' },
                     body: JSON.stringify({
                         video_ids: this.selectedVideos,
                         channel_id: this.selectedChannel || null
                     })
                 });
                 const data = await response.json();
                 if (data.success) {
                     this.showModal = false;
                     location.reload();
                 } else {
                     alert(data.message || 'Ошибка при перемещении видео');
                 }
             } catch (error) {
                 console.error('Error:', error);
                 alert('Произошла ошибка');
             }
         }
     }">
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-3xl text-gray-900 dark:text-gray-100">{{ 'video.my_videos'|trans }}</h1>
        <div class="flex space-x-3">
            <button @click="openChannelModal()"
                    :disabled="bulkBtnDisabled"
                    class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 disabled:opacity-50 disabled:cursor-not-allowed">
                <i class="fas fa-tv mr-2"></i>Управление каналами
            </button>
            <a href="{{ path('video_upload') }}" class="inline-flex items-center px-4 py-2 bg-orange-600 text-white rounded-md hover:bg-orange-700">
                {{ 'video.upload_new'|trans }}
            </a>
        </div>
    </div>

    {% if videos|length > 0 %}
        <div class="bg-white dark:bg-gray-800 rounded-md shadow overflow-hidden">
            <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                <thead class="bg-gray-50 dark:bg-gray-900">
                    <tr>
                        <th class="px-6 py-3 text-left">
                            <input type="checkbox" 
                                   @change="toggleAll($event)"
                                   :checked="selectedCount > 0 && selectedCount === document.querySelectorAll('.video-checkbox').length"
                                   :indeterminate.prop="selectedCount > 0 && selectedCount < document.querySelectorAll('.video-checkbox').length"
                                   class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500">
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">{{ 'video.table.video'|trans }}</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Канал</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">{{ 'video.table.status'|trans }}</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">{{ 'video.table.views'|trans }}</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">{{ 'video.table.date'|trans }}</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">{{ 'video.table.actions'|trans }}</th>
                    </tr>
                </thead>
                <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                    {% for video in videos %}
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <input type="checkbox" 
                                       name="video_ids[]" 
                                       value="{{ video.id }}" 
                                       x-model="selectedVideos"
                                       class="video-checkbox w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500">
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div class="flex-shrink-0 h-16 w-24">
                                        {{ lazy_img(video_poster(video.poster), video.title, 'h-16 w-24 object-cover rounded', 96, 64) }}
                                                <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 002 2v8a2 2 0 002 2z"></path>
                                                </svg>
                                            </div>
                                        {% endif %}
                                    </div>
                                    <div class="ml-4">
                                        <div class="text-sm font-medium text-gray-900 dark:text-gray-100">{{ video.title }}</div>
                                        <div class="text-sm text-gray-500 dark:text-gray-400">{{ video.slug }}</div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                {% if video.channel %}
                                    <div class="flex items-center">
                                        <span class="text-sm text-gray-900 dark:text-gray-100">{{ video.channel.name }}</span>
                                        <a href="{{ path('channel_show', {slug: video.channel.slug}) }}" 
                                           class="ml-2 text-blue-600 hover:text-blue-800 text-xs">
                                            <i class="fas fa-external-link-alt"></i>
                                        </a>
                                    </div>
                                {% else %}
                                    <span class="text-sm text-gray-500 dark:text-gray-400 italic">Без канала</span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                                    {% if video.status == 'published' %}bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200
                                    {% elseif video.status == 'processing' %}bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200
                                    {% elseif video.status == 'draft' %}bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-200
                                    {% else %}bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200{% endif %}">
                                    {{ ('video.status.' ~ video.status)|trans }}
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                                {{ video.viewsCount }}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                                {{ video.createdAt|locale_date('datetime') }}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                <a href="{{ path('video_detail', {slug: video.slug}) }}" class="text-orange-600 hover:text-orange-900 dark:text-orange-400 dark:hover:text-orange-300 mr-3">
                                    {{ 'video.table.view'|trans }}
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="text-center py-12 bg-white dark:bg-gray-800 rounded-md shadow">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 002 2v8a2 2 0 002 2z"></path>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-gray-100">{{ 'video.empty.title'|trans }}</h3>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">{{ 'video.empty.description'|trans }}</p>
            <div class="mt-6">
                <a href="{{ path('video_upload') }}" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-orange-600 hover:bg-orange-700">
                    {{ 'video.empty.upload'|trans }}
                </a>
            </div>
        </div>
    {% endif %}

    <!-- Модальное окно управления каналами -->
    <div x-show="showModal" 
         x-transition
         @click.self="showModal = false"
         class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
        <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white dark:bg-gray-800">
            <div class="mt-3">
                <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100 mb-4">Управление каналами</h3>
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Выберите канал:</label>
                    <select x-model="selectedChannel" 
                            class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 rounded-md focus:ring-blue-500 focus:border-blue-500">
                        <option value="">Убрать из канала</option>
                        <template x-for="channel in channels" :key="channel.id">
                            <option :value="channel.id" x-text="`${channel.name} (${channel.videosCount} видео)`"></option>
                        </template>
                    </select>
                </div>
                <div class="flex justify-end space-x-4">
                    <button @click="showModal = false"
                            class="px-4 py-2 bg-gray-300 text-gray-800 text-base font-medium rounded-md shadow-sm hover:bg-gray-400">
                        Отмена
                    </button>
                    <button @click="applyChannelChange()"
                            class="px-4 py-2 bg-blue-600 text-white text-base font-medium rounded-md shadow-sm hover:bg-blue-700">
                        Применить
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

{% block javascripts %}
{{ parent() }}
{% endblock %}
{% endblock %}