{# Кастомный видео плеер #}
{% set sources = [] %}
{% for encodedFile in video.encodedFiles %}
    {% set fileUrl = video_file_urls[encodedFile.id] ?? ('/media/' ~ encodedFile.file) %}
    {% set sources = sources|merge([{
        'url': fileUrl,
        'quality': encodedFile.profile.name,
        'resolution': encodedFile.profile.resolution,
        'primary': encodedFile.primary
    }]) %}
{% endfor %}

{# Fallback to temp file if no encoded files #}
{% if sources|length == 0 and video.tempVideoFile %}
    {% set sources = [{
        'url': '/media/' ~ video.tempVideoFile,
        'quality': 'Original',
        'resolution': '',
        'primary': true
    }] %}
{% endif %}

<div class="video-player-container relative bg-black rounded-md overflow-hidden group"
     data-controller="video-player"
     data-video-player-sources-value="{{ sources|json_encode|e('html_attr') }}"
     data-video-player-poster-value="{{ video_poster(video.poster) }}"
     data-video-player-video-id-value="{{ video.id }}"
     data-video-player-target="container"
     data-turbo="false">
    
    {# Video Element #}
    <video class="w-full aspect-video"
           data-video-player-target="video"
           poster="{{ video_poster(video.poster) }}"
           playsinline
           preload="metadata"
           data-action="click->video-player#togglePlay dblclick->video-player#toggleFullscreen">
    </video>

    {# Loading Spinner #}
    <div class="absolute inset-0 flex items-center justify-center bg-black/30 hidden" data-video-player-target="loader">
        <svg class="animate-spin h-12 w-12 text-white" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
    </div>

    {# Big Play Button #}
    <button class="absolute inset-0 flex items-center justify-center" 
            data-video-player-target="bigPlayBtn"
            data-action="click->video-player#togglePlay">
        <div class="w-20 h-20 bg-orange-600/90 hover:bg-orange-600 rounded-full flex items-center justify-center transition-all transform hover:scale-110">
            <svg class="w-10 h-10 text-white ml-1" fill="currentColor" viewBox="0 0 24 24">
                <path d="M8 5v14l11-7z"/>
            </svg>
        </div>
    </button>

    {# Controls Overlay #}
    <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/90 via-black/50 to-transparent pt-16 pb-2 px-4 transition-opacity duration-300"
         data-video-player-target="controls">
        
        {# Progress Bar #}
        <div class="relative h-1 bg-white/30 rounded cursor-pointer mb-3 group/progress"
             data-video-player-target="progress"
             data-action="click->video-player#seek">
            
            {# Buffered #}
            <div class="absolute h-full bg-white/50 rounded" data-video-player-target="progressBuffered" style="width: 0%"></div>
            
            {# Hover Preview #}
            <div class="absolute h-full bg-white/30 rounded" data-video-player-target="progressHover" style="width: 0%"></div>
            
            {# Progress #}
            <div class="absolute h-full bg-orange-500 rounded" data-video-player-target="progressBar" style="width: 0%">
                <div class="absolute right-0 top-1/2 -translate-y-1/2 w-3 h-3 bg-orange-500 rounded-full opacity-0 group-hover/progress:opacity-100 transition-opacity"></div>
            </div>
            
            {# Time Tooltip #}
            <div class="absolute -top-8 -translate-x-1/2 bg-black/90 text-white text-xs px-2 py-1 rounded hidden"
                 data-video-player-target="tooltip">0:00</div>
        </div>

        {# Controls Row #}
        <div class="flex items-center justify-between">
            {# Left Controls #}
            <div class="flex items-center gap-2">
                {# Play/Pause #}
                <button class="p-2 text-white hover:text-orange-400 transition" 
                        data-video-player-target="playBtn"
                        data-action="click->video-player#togglePlay">
                    <span data-video-player-target="playIcon">
                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M8 5v14l11-7z"/>
                        </svg>
                    </span>
                    <span class="hidden" data-video-player-target="pauseIcon">
                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M6 4h4v16H6V4zm8 0h4v16h-4V4z"/>
                        </svg>
                    </span>
                </button>

                {# Skip Backward #}
                <button class="p-2 text-white hover:text-orange-400 transition hidden sm:block"
                        data-action="click->video-player#skipBackward"
                        title="Назад 10 сек (J)">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12.066 11.2a1 1 0 000 1.6l5.334 4A1 1 0 0019 16V8a1 1 0 00-1.6-.8l-5.333 4zM4.066 11.2a1 1 0 000 1.6l5.334 4A1 1 0 0011 16V8a1 1 0 00-1.6-.8l-5.334 4z"/>
                    </svg>
                </button>

                {# Skip Forward #}
                <button class="p-2 text-white hover:text-orange-400 transition hidden sm:block"
                        data-action="click->video-player#skipForward"
                        title="Вперёд 10 сек (L)">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.933 12.8a1 1 0 000-1.6L6.6 7.2A1 1 0 005 8v8a1 1 0 001.6.8l5.333-4zM19.933 12.8a1 1 0 000-1.6l-5.333-4A1 1 0 0013 8v8a1 1 0 001.6.8l5.333-4z"/>
                    </svg>
                </button>

                {# Volume #}
                <div class="flex items-center gap-1 group/volume">
                    <button class="p-2 text-white hover:text-orange-400 transition"
                            data-action="click->video-player#toggleMute">
                        <span data-video-player-target="volumeIcon">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.536 8.464a5 5 0 010 7.072m2.828-9.9a9 9 0 010 12.728M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z"/>
                            </svg>
                        </span>
                    </button>
                    <input type="range" min="0" max="100" value="100"
                           class="w-0 group-hover/volume:w-20 transition-all duration-200 accent-orange-500 cursor-pointer"
                           data-video-player-target="volumeSlider"
                           data-action="input->video-player#setVolume">
                </div>

                {# Time #}
                <div class="text-white text-sm ml-2">
                    <span data-video-player-target="currentTime">0:00</span>
                    <span class="text-gray-400">/</span>
                    <span data-video-player-target="duration">0:00</span>
                </div>
            </div>

            {# Right Controls #}
            <div class="flex items-center gap-1">
                {# Speed #}
                <div class="relative">
                    <button class="p-2 text-white hover:text-orange-400 transition text-sm"
                            data-video-player-target="speedBtn"
                            data-action="click->video-player#toggleSpeedMenu">
                        <span>1x</span>
                    </button>
                    <div class="absolute bottom-full right-0 mb-2 bg-gray-900/95 rounded-md overflow-hidden hidden min-w-[100px]"
                         data-video-player-target="speedMenu">
                        {% for speed in [0.25, 0.5, 0.75, 1, 1.25, 1.5, 1.75, 2] %}
                            <button class="w-full px-4 py-2 text-left text-sm text-white hover:bg-gray-700"
                                    data-action="click->video-player#setSpeed"
                                    data-speed="{{ speed }}">
                                {{ speed == 1 ? 'Обычная' : speed ~ 'x' }}
                            </button>
                        {% endfor %}
                    </div>
                </div>

                {# Quality #}
                {% if video.encodedFiles|length > 1 %}
                <div class="relative">
                    <button class="p-2 text-white hover:text-orange-400 transition flex items-center gap-1"
                            data-video-player-target="qualityBtn"
                            data-action="click->video-player#toggleQualityMenu">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                        </svg>
                        <span class="text-xs" data-video-player-target="currentQuality">Auto</span>
                    </button>
                    <div class="absolute bottom-full right-0 mb-2 bg-gray-900/95 rounded-md overflow-hidden hidden min-w-[140px]"
                         data-video-player-target="qualityMenu">
                        <div data-video-player-target="qualityList"></div>
                    </div>
                </div>
                {% endif %}

                {# PiP #}
                <button class="p-2 text-white hover:text-orange-400 transition hidden sm:block"
                        data-video-player-target="pipBtn"
                        data-action="click->video-player#togglePiP"
                        title="Картинка в картинке">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h12a2 2 0 012 2v7a2 2 0 01-2 2h-5m-4 0H6a2 2 0 01-2-2V6m0 0h16M4 6v7m16-7v7m-9 4h5a1 1 0 011 1v3a1 1 0 01-1 1h-5a1 1 0 01-1-1v-3a1 1 0 011-1z"/>
                    </svg>
                </button>

                {# Fullscreen #}
                <button class="p-2 text-white hover:text-orange-400 transition"
                        data-video-player-target="fullscreenBtn"
                        data-action="click->video-player#toggleFullscreen"
                        title="Полный экран (F)">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4"/>
                    </svg>
                </button>
            </div>
        </div>
    </div>
</div>