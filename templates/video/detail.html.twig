{% block javascripts %}
<script>
// Copy to clipboard helper
function copyToClipboard(elementId) {
    const element = document.getElementById(elementId);
    const text = element.value;
    
    navigator.clipboard.writeText(text).then(() => {
        // Show success message
        const originalValue = element.value;
        element.value = '{{ 'video.share.copied'|trans }}';
        element.classList.add('bg-green-100', 'dark:bg-green-900');
        
        setTimeout(() => {
            element.value = originalValue;
            element.classList.remove('bg-green-100', 'dark:bg-green-900');
        }, 2000);
    }).catch(err => {
        console.error('Failed to copy:', err);
        alert('{{ 'common.error'|trans }}');
    });
}

// Playlist dropdown functions
function togglePlaylistDropdown() {
    const menu = document.getElementById('playlist-menu');
    if (menu) {
        menu.classList.toggle('hidden');
    }
}

// Add video to playlist
function addToPlaylist(playlistId, videoId) {
    fetch(`/playlist/${playlistId}/add-video`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'X-Requested-With': 'XMLHttpRequest'
        },
        body: JSON.stringify({ video_id: videoId })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            // Show success message
            showNotification('Видео добавлено в плейлист', 'success');
            // Close dropdown
            const menu = document.getElementById('playlist-menu');
            if (menu) {
                menu.classList.add('hidden');
            }
        } else {
            showNotification(data.message || 'Ошибка при добавлении видео', 'error');
        }
    })
    .catch(err => {
        console.error('Failed to add to playlist:', err);
        showNotification('Ошибка при добавлении видео', 'error');
    });
}

// Bookmark functions
function toggleBookmark(videoId) {
    const btn = document.getElementById('bookmark-btn');
    if (!btn) return;
    
    fetch(`/bookmark/toggle/${videoId}`, {
        method: 'POST',
        headers: {
            'X-Requested-With': 'XMLHttpRequest'
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            const svg = btn.querySelector('svg');
            if (data.bookmarked) {
                btn.classList.remove('text-gray-600');
                btn.classList.add('text-yellow-500');
                svg.setAttribute('fill', 'currentColor');
            } else {
                btn.classList.remove('text-yellow-500');
                btn.classList.add('text-gray-600');
                svg.setAttribute('fill', 'none');
            }
            showNotification(data.message, 'success');
        } else {
            showNotification(data.message || 'Ошибка', 'error');
        }
    })
    .catch(err => {
        console.error('Failed to toggle bookmark:', err);
        showNotification('Ошибка при добавлении в закладки', 'error');
    });
}

// Show notification
function showNotification(message, type = 'info') {
    // Create notification element
    const notification = document.createElement('div');
    notification.className = `fixed top-4 right-4 z-50 px-4 py-3 rounded-md shadow-lg transition-all duration-300 transform translate-x-full ${
        type === 'success' ? 'bg-green-500 text-white' :
        type === 'error' ? 'bg-red-500 text-white' :
        'bg-blue-500 text-white'
    }`;
    notification.textContent = message;
    
    document.body.appendChild(notification);
    
    // Animate in
    setTimeout(() => {
        notification.classList.remove('translate-x-full');
    }, 100);
    
    // Remove after 3 seconds
    setTimeout(() => {
        notification.classList.add('translate-x-full');
        setTimeout(() => {
            document.body.removeChild(notification);
        }, 300);
    }, 3000);
}

// Show embed modal
function showEmbedModal() {
    const modal = document.getElementById('embed-modal');
    if (modal) {
        modal.style.display = 'flex';
        modal.classList.remove('hidden');
    }
}

// Close embed modal
function closeEmbedModal() {
    const modal = document.getElementById('embed-modal');
    if (modal) {
        modal.style.display = 'none';
        modal.classList.add('hidden');
    }
}

// Copy embed code from modal
function copyEmbedCodeFromModal() {
    const embedCode = document.getElementById('embed-code-textarea').value;
    const btn = document.getElementById('copy-embed-btn');
    
    navigator.clipboard.writeText(embedCode).then(() => {
        const originalText = btn.textContent;
        btn.textContent = '{{ 'video.share.embed_copied'|trans }}';
        btn.classList.add('bg-green-600', 'hover:bg-green-700');
        btn.classList.remove('bg-orange-600', 'hover:bg-orange-700');
        
        setTimeout(() => {
            btn.textContent = originalText;
            btn.classList.remove('bg-green-600', 'hover:bg-green-700');
            btn.classList.add('bg-orange-600', 'hover:bg-orange-700');
        }, 2000);
    }).catch(err => {
        console.error('Failed to copy embed code:', err);
        alert('{{ 'common.error'|trans }}');
    });
}

// Close modal when clicking outside
document.addEventListener('click', function(e) {
    const modal = document.getElementById('embed-modal');
    if (modal && e.target === modal) {
        closeEmbedModal();
    }
});

// Close modal on Escape key
document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
        closeEmbedModal();
    }
});

// Playlist modal functions for video cards
function openPlaylistModal(videoId) {
    const modal = document.getElementById('playlist-modal-' + videoId);
    if (modal) {
        modal.style.display = 'flex';
        modal.classList.remove('hidden');
        loadPlaylistsForModal(videoId);
    }
}

function closePlaylistModal(videoId) {
    const modal = document.getElementById('playlist-modal-' + videoId);
    if (modal) {
        modal.style.display = 'none';
        modal.classList.add('hidden');
    }
}

function loadPlaylistsForModal(videoId) {
    const listContainer = document.getElementById('playlist-list-' + videoId);
    if (!listContainer) return;
    
    // Fetch playlists via AJAX
    fetch('/api/playlists', {
        headers: { 'Accept': 'application/json' }
    })
    .then(response => response.json())
    .then(data => {
        listContainer.innerHTML = '';
        
        if (data.playlists && data.playlists.length > 0) {
            data.playlists.forEach(playlist => {
                const button = document.createElement('button');
                button.type = 'button';
                button.className = 'w-full flex items-center justify-between px-4 py-3 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-md transition';
                button.innerHTML = `
                    <span>${playlist.title}</span>
                    <span class="text-xs text-gray-500">${playlist.videosCount} {{ 'playlist.videos'|trans }}</span>
                `;
                button.onclick = () => addToPlaylist(playlist.id, videoId);
                listContainer.appendChild(button);
            });
        } else {
            listContainer.innerHTML = '<p class="text-sm text-gray-500 text-center py-4">{{ 'playlist.no_playlists'|trans }}</p>';
        }
    })
    .catch(err => {
        console.error('Failed to load playlists:', err);
        listContainer.innerHTML = '<p class="text-sm text-red-500 text-center py-4">{{ 'common.error'|trans }}</p>';
    });
}

// Close modal when clicking outside
document.addEventListener('click', function(e) {
    // Close playlist modals
    document.querySelectorAll('[id^="playlist-modal-"]').forEach(modal => {
        if (e.target === modal) {
            const videoId = modal.id.replace('playlist-modal-', '');
            closePlaylistModal(videoId);
        }
    });
});
</script>
