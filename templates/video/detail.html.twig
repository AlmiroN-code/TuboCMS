{% extends 'base.html.twig' %}

{% set breadcrumbs = [
    {'label': 'breadcrumb.home'|trans, 'url': path('app_home')},
    {'label': video.categories|length > 0 ? video.categories[0].name : 'breadcrumb.videos'|trans, 'url': video.categories|length > 0 ? path('app_category_show', {'slug': video.categories[0].slug}) : path('app_videos')},
    {'label': video.title, 'url': ''}
] %}

{% block title %}{{ auto_meta_title(video) ?: video.title }}{% endblock %}
{% block meta_description %}{{ auto_meta_description(video) }}{% endblock %}

{# Open Graph meta tags for social sharing #}
{% set og = og_meta(video) %}
{% block og_title %}{{ og['og:title'] }}{% endblock %}
{% block og_description %}{{ og['og:description'] }}{% endblock %}
{% block og_type %}{{ og['og:type'] }}{% endblock %}
{% block og_image %}<meta property="og:image" content="{{ og['og:image'] }}"><meta property="og:image:width" content="{{ og['og:image:width'] }}"><meta property="og:image:height" content="{{ og['og:image:height'] }}">{% if og['og:video'] %}<meta property="og:video" content="{{ og['og:video'] }}"><meta property="og:video:type" content="{{ og['og:video:type'] }}"><meta property="og:video:width" content="{{ og['og:video:width'] }}"><meta property="og:video:height" content="{{ og['og:video:height'] }}"><meta property="og:video:duration" content="{{ og['og:video:duration'] }}">{% endif %}{% endblock %}

{# VideoObject JSON-LD structured data #}
{% block structured_data %}
{{ video_schema(video) }}
{% endblock %}

{% block body %}
    <div class="flex flex-col lg:flex-row p-4 gap-4">
        <div class="flex-1">
            {# Рекламный блок перед видео #}
            <div class="ad-block mb-4">
                {{ show_ad('video_before_player', {
                    'page': 'video_detail',
                    'video_id': video.id,
                    'category_id': video.categories|length > 0 ? video.categories[0].id : null,
                    'user_id': app.user ? app.user.id : null
                }) }}
            </div>

            <div class="mb-4">
                {% if video.encodedFiles|length > 0 or video.tempVideoFile %}
                    {% include 'video/_player.html.twig' with {'video': video, 'video_file_urls': video_file_urls|default({})} %}
                {% else %}
                    <div class="bg-black rounded-md overflow-hidden relative">
                        {# Фоновое изображение заглушки #}
                        <img src="{{ video_poster(video.poster) }}" alt="{{ video.title }}" class="absolute inset-0 w-full h-full object-cover opacity-30">
                        
                        <div class="aspect-video flex items-center justify-center bg-gray-800/80 relative z-10">
                            <div class="text-center">
                                {% if video.processingStatus == 'processing' %}
                                    <svg class="w-16 h-16 text-blue-400 mx-auto mb-4 animate-spin drop-shadow-lg" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                                    </svg>
                                    <p class="mb-2 font-bold text-lg drop-shadow-[0_4px_6px_rgba(0,0,0,0.9)] [color:#333333] [text-shadow:_-2px_-2px_0_#fff,_2px_-2px_0_#fff,_-2px_2px_0_#fff,_2px_2px_0_#fff,_0_-2px_0_#fff,_0_2px_0_#fff,_-2px_0_0_#fff,_2px_0_0_#fff]">{{ 'video.processing.in_progress'|trans }}</p>
                                    {% if video.processingProgress > 0 %}
                                        <div class="w-64 bg-gray-700 rounded-full h-2 mx-auto shadow-lg">
                                            <div class="bg-blue-600 h-2 rounded-full" style="width: {{ video.processingProgress }}%"></div>
                                        </div>
                                        <p class="text-sm mt-2 font-semibold drop-shadow-[0_4px_6px_rgba(0,0,0,0.9)] [color:#333333] [text-shadow:_-2px_-2px_0_#fff,_2px_-2px_0_#fff,_-2px_2px_0_#fff,_2px_2px_0_#fff,_0_-2px_0_#fff,_0_2px_0_#fff,_-2px_0_0_#fff,_2px_0_0_#fff]">{{ video.processingProgress }}%</p>
                                    {% endif %}
                                {% elseif video.processingStatus == 'error' %}
                                    <svg class="w-16 h-16 text-red-400 mx-auto mb-4 drop-shadow-lg" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    <p class="font-bold text-lg drop-shadow-[0_4px_6px_rgba(0,0,0,0.9)] [color:#333333] [text-shadow:_-2px_-2px_0_#fff,_2px_-2px_0_#fff,_-2px_2px_0_#fff,_2px_2px_0_#fff,_0_-2px_0_#fff,_0_2px_0_#fff,_-2px_0_0_#fff,_2px_0_0_#fff]">{{ 'video.processing.error'|trans }}</p>
                                    {% if video.processingError %}
                                        <p class="text-sm mt-2 font-semibold drop-shadow-[0_4px_6px_rgba(0,0,0,0.9)] [color:#333333] [text-shadow:_-2px_-2px_0_#fff,_2px_-2px_0_#fff,_-2px_2px_0_#fff,_2px_2px_0_#fff,_0_-2px_0_#fff,_0_2px_0_#fff,_-2px_0_0_#fff,_2px_0_0_#fff]">{{ video.processingError }}</p>
                                    {% endif %}
                                {% else %}
                                    <svg class="w-16 h-16 text-gray-400 mx-auto mb-4 drop-shadow-lg" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    <p class="font-bold text-lg drop-shadow-[0_4px_6px_rgba(0,0,0,0.9)] [color:#333333] [text-shadow:_-2px_-2px_0_#fff,_2px_-2px_0_#fff,_-2px_2px_0_#fff,_2px_2px_0_#fff,_0_-2px_0_#fff,_0_2px_0_#fff,_-2px_0_0_#fff,_2px_0_0_#fff]">{{ 'video.processing.waiting'|trans }}</p>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>

            {# Главы видео #}
            {% if chapters is defined and chapters|length > 0 %}
            <div class="bg-gray-50 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-md p-4 mb-4">
                <h3 class="font-semibold text-gray-900 dark:text-gray-100 mb-3 flex items-center gap-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                    </svg>
                    Главы видео
                </h3>
                <div class="space-y-2">
                    {% for chapter in chapters %}
                    <button type="button" 
                            onclick="seekToChapter({{ chapter.timestamp }})"
                            class="w-full flex items-start gap-3 p-3 bg-white dark:bg-gray-700 rounded-md hover:bg-gray-100 dark:hover:bg-gray-600 transition text-left">
                        <span class="flex-shrink-0 text-sm font-mono text-orange-600 dark:text-orange-400 font-semibold">
                            {{ chapter.formattedTimestamp }}
                        </span>
                        <div class="flex-1 min-w-0">
                            <p class="text-sm font-medium text-gray-900 dark:text-gray-100">{{ chapter.title }}</p>
                            {% if chapter.description %}
                            <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">{{ chapter.description }}</p>
                            {% endif %}
                        </div>
                    </button>
                    {% endfor %}
                </div>
            </div>
            
            <script>
            function seekToChapter(timestamp) {
                const videoElement = document.querySelector('[data-video-player-target="video"]');
                if (videoElement) {
                    videoElement.currentTime = timestamp;
                    videoElement.play();
                }
            }
            </script>
            {% endif %}

<div class="flex items-center justify-between mb-4 pb-4 border-b border-gray-200 dark:border-gray-700">
                <div class="flex items-center gap-2">
                    {# Like Buttons #}
                    {% include 'video/_like_buttons.html.twig' with {'video': video, 'user_like': user_like|default(null)} %}
                    
                    {# Bookmark Button #}
                    {% if app.user %}
                        <button type="button" 
                                id="bookmark-btn"
                                onclick="toggleBookmark({{ video.id }})"
                                class="flex items-center gap-1 px-4 py-2 md:px-3 md:py-1.5 text-sm {{ is_bookmarked|default(false) ? 'text-yellow-500' : 'text-gray-600 dark:text-gray-400' }} hover:text-yellow-500 transition touch-manipulation"
                                title="{{ 'bookmark.add'|trans }}">
                            <svg class="w-5 h-5" fill="{{ is_bookmarked|default(false) ? 'currentColor' : 'none' }}" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
                            </svg>
                        </button>
                        
                        {# Add to Playlist Button #}
                        <div class="relative" id="playlist-dropdown">
                            <button type="button" 
                                    onclick="togglePlaylistDropdown()"
                                    class="flex items-center gap-1 px-4 py-2 md:px-3 md:py-1.5 text-sm text-gray-600 dark:text-gray-400 hover:text-orange-600 dark:hover:text-orange-400 transition touch-manipulation"
                                    title="{{ 'playlist.add_video'|trans }}">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                                </svg>
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
                                </svg>
                            </button>
                            <div id="playlist-menu" class="hidden absolute right-0 mt-2 w-64 bg-white dark:bg-gray-800 rounded-md shadow-lg border border-gray-200 dark:border-gray-700 py-2 z-50">
                                <div class="px-4 py-2 border-b border-gray-200 dark:border-gray-700">
                                    <p class="font-semibold text-gray-900 dark:text-gray-100">{{ 'playlist.add_video'|trans }}</p>
                                </div>
                                <div id="playlist-list" class="max-h-48 overflow-y-auto">
                                    {% for playlist in user_playlists|default([]) %}
                                        <button type="button" 
                                        onclick="addToPlaylist({{ playlist.id }}, {{ video.id }})"
                                        class="w-full flex items-center justify-between px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
                                            <span>{{ playlist.title }}</span>
                                            <span class="text-xs text-gray-500">{{ playlist.videosCount }} {{ 'playlist.videos'|trans }}</span>
                                        </button>
                                    {% else %}
                                        <p class="px-4 py-2 text-sm text-gray-500">{{ 'playlist.no_playlists'|trans }}</p>
                                    {% endfor %}
                                </div>
                                <div class="border-t border-gray-200 dark:border-gray-700 mt-2 pt-2">
                                    <a href="{{ path('playlist_create') }}" class="flex items-center gap-2 px-4 py-2 text-sm text-orange-600 dark:text-orange-400 hover:bg-gray-100 dark:hover:bg-gray-700">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                                        </svg>
                                        {{ 'playlist.create_new'|trans }}
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
                
                {# Share Buttons #}
                {% set share_links = share_urls(video) %}
                <div class="flex items-center gap-2" data-controller="share">
                    <button type="button" 
                            onclick="showEmbedModal()"
                            class="flex items-center gap-1 px-3 py-1.5 text-sm text-gray-600 dark:text-gray-400 hover:text-orange-600 dark:hover:text-orange-400 transition"
                            title="{{ 'video.share.copy_link'|trans }}">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3"></path>
                        </svg>
                        <span data-share-target="message">{{ 'video.share.copy'|trans }}</span>
                    </button>
                    <a href="{{ share_links.twitter }}" target="_blank" rel="noopener" 
                       class="p-1.5 text-gray-600 dark:text-gray-400 hover:text-blue-400 transition" 
                       title="{{ 'video.share.twitter'|trans }}">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
                    </a>
                    <a href="{{ share_links.facebook }}" target="_blank" rel="noopener" 
                       class="p-1.5 text-gray-600 dark:text-gray-400 hover:text-blue-600 transition" 
                       title="{{ 'video.share.facebook'|trans }}">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
                    </a>
                    <a href="{{ share_links.telegram }}" target="_blank" rel="noopener" 
                       class="p-1.5 text-gray-600 dark:text-gray-400 hover:text-blue-500 transition" 
                       title="{{ 'video.share.telegram'|trans }}">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"/></svg>
                    </a>
                    <a href="{{ share_links.whatsapp }}" target="_blank" rel="noopener" 
                       class="p-1.5 text-gray-600 dark:text-gray-400 hover:text-green-500 transition" 
                       title="{{ 'video.share.whatsapp'|trans }}">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.67-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.076 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421-7.403h-.004a9.87 9.87 0 00-4.782 1.176l-.013 1.39 4.552 2.251 3.635-1.993-.392-2.824zm0 0"/></svg>
                    </a>
                    <a href="{{ share_links.reddit }}" target="_blank" rel="noopener" 
                       class="p-1.5 text-gray-600 dark:text-gray-400 hover:text-orange-500 transition" 
                       title="{{ 'video.share.reddit'|trans }}">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0zm5.01 4.744c.688 0 1.25.561 1.25 1.249a1.25 1.25 0 0 1-2.498.056l-2.597-.547-.8 3.747c1.824.07 3.48.632 4.674 1.488.308-.309.73-.491 1.207-.491.968 0 1.754.786 1.754 1.754 0 .716-.435 1.333-1.01 1.614a3.111 3.111 0 0 1 .042.52c0 2.694-3.385 4.859-7.181 4.859-3.796 0-7.182-2.165-7.182-4.859a3.5 3.5 0 0 1 .476-1.84 1.754 1.754 0 1 0 2.516-2.422c1.062-.871 2.614-1.414 4.27-1.414.375 0 .74.04 1.085.117l.812-3.813a1.25 1.25 0 0 1 1.528-1.047zM5.364 12.744c-.656 0-1.186.529-1.186 1.186 0 .657.53 1.186 1.186 1.186.657 0 1.186-.53 1.186-1.186 0-.657-.53-1.186-1.186-1.186zm5.313 1.9h-.227c.257.164.528.271.822.271.294 0 .564-.107.822-.27h-.227a1.004 1.004 0 0 0-.988.988v.01c0 .55.438.996.988.996h.227a1.002 1.002 0 0 0 .988-.988v-.01a1.004 1.004 0 0 0-.988-.988zm4.598-1.9c-.657 0-1.186.529-1.186 1.186 0 .657.529 1.186 1.186 1.186.656 0 1.186-.53 1.186-1.186 0-.657-.53-1.186-1.186-1.186z"/></svg>
                    </a>
                    <a href="{{ share_links.pinterest }}" target="_blank" rel="noopener" 
                       class="p-1.5 text-gray-600 dark:text-gray-400 hover:text-red-600 transition" 
                       title="{{ 'video.share.pinterest'|trans }}">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0C5.373 0 0 5.373 0 12c0 5.084 3.163 9.426 7.627 11.174-.105-.949-.2-2.405.042-3.441.223-.937 1.58-6.685 1.58-6.685s-.4-.8-.4-1.982c0-1.858 1.08-3.253 2.423-3.253 1.146 0 1.699.86 1.699 1.89 0 1.152-.733 2.872-1.11 4.471-.313 1.323.627 2.401 1.936 2.401 2.324 0 4.106-2.447 4.106-5.982 0-3.137-2.25-5.335-5.465-5.335-3.728 0-5.905 2.788-5.905 5.682 0 1.12.423 2.32 1.052 2.975.115.133.132.248.099.38-.108.452-.35 1.473-.401 1.694-.054.229-.183.276-.422.167-1.85-.868-3.006-3.589-3.006-5.694 0-4.115 2.99-7.897 8.627-7.897 4.527 0 8.043 3.199 8.043 7.473 0 4.46-2.809 8.049-6.739 8.049-1.312 0-2.545-.68-2.968-1.48 0 0-.648 2.469-.808 3.08-.293 1.123-1.084 2.524-1.613 3.38A12 12 0 0 0 12 24c6.627 0 12-5.373 12-12S18.627 0 12 0z"/></svg>
                    </a>
                </div>
                <div class="flex items-center gap-4 text-sm text-gray-600 dark:text-gray-400">
                    <span class="flex items-center gap-1">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path></svg>
                        {{ 'video.views_count'|trans({'%count%': video.viewsCount|locale_number}) }}
                    </span>
                    <span class="flex items-center gap-1">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                        {{ video.createdAt|locale_date('short') }}
                    </span>
                </div>
                
            </div>

            <h1 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-4">{{ video.title }}</h1>


            {% if video.description %}
                <div class="bg-gray-50 dark:bg-gray-800 border border-gray-200 rounded-md p-4 mb-6">
                    <div class="text-gray-700 dark:text-gray-300 prose prose-sm max-w-none dark:prose-invert">{{ video.description|raw }}</div>
                </div>
            {% endif %}

            {# Рекламный блок после описания #}
            <div class="ad-block mb-6">
                {{ show_ad('video_after_description', {
                    'page': 'video_detail',
                    'video_id': video.id,
                    'category_id': video.categories|length > 0 ? video.categories[0].id : null,
                    'user_id': app.user ? app.user.id : null
                }) }}
            </div>

            {# Категории #}
            {% if video.categories|length > 0 %}
                <div class="flex flex-wrap items-center gap-2 mb-4">
                    <span class="text-sm text-gray-500 dark:text-gray-400">{{ 'video.categories'|trans }}:</span>
                    {% for category in video.categories %}
                        <a href="{{ path('app_category_show', {slug: category.slug}) }}" 
                           class="inline-flex items-center px-3 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 rounded-full text-sm hover:bg-blue-200 dark:hover:bg-blue-800 transition">
                            {{ category.name }}
                        </a>
                    {% endfor %}
                </div>
