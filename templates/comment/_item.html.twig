<div class="bg-gray-100 dark:bg-gray-800 rounded-md p-4" id="comment-{{ comment.id }}">
    <div class="flex items-start space-x-4">
        <div class="flex-shrink-0">
            {% if comment.user.avatar %}
                {{ lazy_img(asset('media/avatars/' ~ comment.user.avatar), comment.user.username ~ ' avatar', 'w-10 h-10 rounded-full object-cover', 40, 40, true) }}
            {% else %}
                <div class="w-10 h-10 bg-orange-600 rounded-full flex items-center justify-center">
                    <span class="text-lg font-semibold text-white">{{ comment.user.username|slice(0, 1)|upper }}</span>
                </div>
            {% endif %}
        </div>
        <div class="flex-1">
            <div class="flex items-center justify-between mb-2">
                <div>
                    <a href="{{ path('app_member_profile', {username: comment.user.username}) }}" class="font-semibold text-gray-900 dark:text-gray-100 hover:text-orange-600 dark:hover:text-orange-400">{{ comment.user.username }}</a>
                    <span class="text-gray-500 dark:text-gray-400 text-sm ml-2">{{ comment.createdAt|time_ago }}</span>
                </div>
                {% if app.user and (comment.user == app.user or is_granted('ROLE_ADMIN')) %}
                    <button 
                        hx-delete="{{ path('comment_delete', {'id': comment.id}) }}"
                        hx-target="#comment-{{ comment.id }}"
                        hx-swap="outerHTML"
                        hx-confirm="Delete comment?"
                        class="text-red-500 hover:text-red-400 text-sm transition"
                    >
                        Delete
                    </button>
                {% endif %}
            </div>
            <p class="text-gray-700 dark:text-gray-300 whitespace-pre-line">{{ comment.content|format_mentions }}</p>
            
            {% if app.user and not comment.parent %}
                <button 
                    onclick="toggleReplyForm({{ comment.id }})"
                    class="text-gray-500 dark:text-gray-400 hover:text-orange-600 dark:hover:text-orange-400 text-sm mt-2 transition"
                >
                    Reply
                </button>
                
                <div id="reply-form-{{ comment.id }}" class="hidden mt-4">
                    <form hx-post="{{ path('comment_add') }}" 
                          hx-target="#replies-{{ comment.id }}" 
                          hx-swap="afterbegin"
                          hx-on::after-request="this.reset(); toggleReplyForm({{ comment.id }})">
                        <input type="hidden" name="video_id" value="{{ video.id }}">
                        <input type="hidden" name="parent_id" value="{{ comment.id }}">
                        <textarea 
                            name="content" 
                            rows="2" 
                            placeholder="Your reply..." 
                            required
                            class="w-full px-4 py-2 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500 mb-2 text-gray-900 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400"
                        ></textarea>
                        <button type="submit" class="bg-orange-600 hover:bg-orange-700 text-white px-4 py-2 rounded-md text-sm transition">
                            Submit
                        </button>
                        <button type="button" onclick="toggleReplyForm({{ comment.id }})" class="bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-300 px-4 py-2 rounded-md text-sm ml-2 transition">
                            Cancel
                        </button>
                    </form>
                </div>
            {% endif %}

            {% if comment.replies|length > 0 %}
                <div id="replies-{{ comment.id }}" class="mt-4 ml-4 md:ml-8 space-y-4 border-l-2 border-gray-200 dark:border-gray-700 pl-4">
                    {% for reply in comment.replies %}
                        {% include 'comment/_item.html.twig' with {'comment': reply, 'video': video} %}
                    {% endfor %}
                </div>
            {% else %}
                <div id="replies-{{ comment.id }}" class="mt-4 ml-4 md:ml-8 space-y-4"></div>
            {% endif %}
        </div>
    </div>
</div>
