{% extends 'base.html.twig' %}

{% set breadcrumbs = [
    {'label': 'breadcrumb.home'|trans, 'url': path('app_home')},
    {'label': 'nav.tags'|trans, 'url': ''}
] %}

{% block title %}{{ setting('seo_tags_title') ?: 'nav.tags'|trans }}{% endblock %}

{% block meta_description %}{{ setting('seo_tags_description') ?: parent() }}{% endblock %}

{% block meta_keywords %}{{ setting('seo_tags_keywords') ?: parent() }}{% endblock %}

{% block body %}
    <div class="flex gap-8">
        {% include 'partials/_sidebar.html.twig' %}
        
        <div class="flex-1">
            <div class="mt-8 mb-8">
                <h1 class="text-3xl text-gray-900 dark:text-gray-100">{{ 'nav.tags'|trans }}</h1>
                <p class="text-sm text-gray-500 dark:text-gray-400 mt-2">{{ 'tag.total_count'|trans({'%count%': tags|length}) }}</p>
            </div>

            {# Сортировка #}
            <div class="mb-6 flex gap-2">
                <a href="{{ path('app_tags', {sort: 'name'}) }}" 
                   class="px-3 py-1 rounded text-sm {{ sort == 'name' ? 'bg-orange-600 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600' }}">
                    {{ 'tag.sort.alphabetical'|trans }}
                </a>
                <a href="{{ path('app_tags', {sort: 'popular'}) }}" 
                   class="px-3 py-1 rounded text-sm {{ sort == 'popular' ? 'bg-orange-600 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600' }}">
                    {{ 'tag.sort.popular'|trans }}
                </a>
            </div>

            {% if tags|length > 0 %}
                <div class="flex flex-wrap gap-3">
                    {% for tag in tags %}
                        <a href="{{ path('app_tag_show', {slug: tag.slug}) }}" 
                           class="inline-flex items-center gap-2 px-4 py-2 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-md hover:bg-gray-200 dark:hover:bg-gray-600 transition">
                            <span>#{{ tag.name }}</span>
                            <span class="text-xs text-gray-500 dark:text-gray-400">({{ tag.usageCount }})</span>
                        </a>
                    {% endfor %}
                </div>
            {% else %}
                <div class="text-center py-12">
                    <p class="text-gray-500 dark:text-gray-400 text-lg">{{ 'tag.no_tags'|trans }}</p>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}