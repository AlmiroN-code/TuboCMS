<header class="bg-white">
	<div class="wrap mx-auto">
		<div class="flex justify-between items-center h-16">
			{# Logo #}
			<div class="flex items-center logo">
				<a href="{{ path('app_home') }}" class="flex items-center gap-2 text-2xl font-bold text-orange-600 dark:text-orange-400">
					{% if site_logo() %}
					<img src="{{ site_logo() }}" alt="{{ site_name() }}" class="logo">
					{% else %}
					<svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
						<path d="M8 5v14l11-7z"/>
					</svg>
					<span>{{ site_name() }}</span>
					{% endif %}
				</a>
			</div>
			{# Search Bar with Live Component #}
			<div class="flex-1 max-w-2xl mx-8 relative" data-turbo-permanent id="search-wrapper">
				{{ component('VideoSearch', {query: app.request.query.get('q', '')}) }}
			</div>
			{# Account Controls #}
			<div class="flex items-center gap-4">
				{# Language Switcher #}
				{% include 'partials/_language_switcher.html.twig' %}
				{# Theme Switcher #}
				<button 
					data-theme-toggle
					class="p-2 rounded-md hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors"
					title="Toggle theme"
					aria-label="Toggle theme">
					{# Sun icon (shown in dark theme) #}
					<svg data-theme-icon="light" class="w-5 h-5 text-gray-600 dark:text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="display: none;">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
					</svg>
					{# Moon icon (shown in light theme) #}
					<svg data-theme-icon="dark" class="w-5 h-5 text-gray-600 dark:text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
					</svg>
				</button>
				{% if app.user %}
				{# Upload Button #}
				<a href="{{ path('video_upload') }}" class="inline-flex items-center gap-2 px-4 py-2 hover:bg-orange-700 transition">
					<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
					</svg>
				</a>
				{# User Menu #}
				<div class="relative group">
					<a href="{{ path('app_member_profile', {'username': app.user.username}) }}">
						<button class="flex items-center gap-2 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-md px-3 py-2 transition">
							{% if app.user.avatar %}
							{{ lazy_img(asset('media/avatars/' ~ app.user.avatar), app.user.username, 'w-8 h-8 rounded-full object-cover', 32, 32, true) }}
							{% else %}
							<div class="w-8 h-8 bg-orange-600 rounded-full flex items-center justify-center text-white font-semibold">
								{{ app.user.username|slice(0, 1)|upper }}
							</div>
							{% endif %}
							<svg class="w-4 h-4 text-gray-500 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
							</svg>
						</button>
					</a>
					{# Dropdown Menu #}
					<div class="hidden group-hover:block absolute right-0 w-56 bg-white dark:bg-gray-800 rounded-md shadow-lg border border-gray-200 dark:border-gray-700 py-2 z-50">
						<div class="px-4 py-2 border-b border-gray-200 dark:border-gray-700">
							<p class="font-semibold text-gray-900 dark:text-gray-100">{{ app.user.username }}</p>
							<p class="text-sm text-gray-500 dark:text-gray-400">{{ app.user.email }}</p>
						</div>
						<a href="{{ path('app_member_profile', {'username': app.user.username}) }}" class="flex items-center gap-3 px-4 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
							<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
							</svg>
							{{ 'auth.my_profile'|trans }}
						</a>
						<a href="{{ path('video_my_videos') }}" class="flex items-center gap-3 px-4 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
							<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
							</svg>
							{{ 'auth.my_videos'|trans }}
						</a>
						<a href="{{ path('my_channels') }}" class="flex items-center gap-3 px-4 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
							<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
							</svg>
							{{ 'auth.my_channels'|trans }}
						</a>
						<a href="{{ path('playlists_index') }}" class="flex items-center gap-3 px-4 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
							<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
							</svg>
							{{ 'playlist.my_playlists'|trans }}
						</a>
						<a href="{{ path('app_series_index') }}" class="flex items-center gap-3 px-4 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
							<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z"></path>
							</svg>
							{{ 'series.my_series'|trans }}
						</a>
						<a href="{{ path('app_history_index') }}" class="flex items-center gap-3 px-4 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
							<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
							</svg>
							{{ 'history.title'|trans }}
						</a>
						<a href="{{ path('app_bookmark_index') }}" class="flex items-center gap-3 px-4 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
							<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
							</svg>
							{{ 'bookmark.title'|trans }}
						</a>
						<a href="{{ path('watch_later_list') }}" class="flex items-center gap-3 px-4 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
							{{ ux_icon('mingcute:time-line', {class: 'w-5 h-5'}) }}
							{{ 'watch_later.title'|trans }}
						</a>
						<a href="{{ path('app_notification_index') }}" class="flex items-center gap-3 px-4 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
							<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
							</svg>
							{{ 'notification.title'|trans }}
							{% include 'partials/_notifications_badge.html.twig' %}
						</a>
						{% if is_granted('ROLE_ADMIN') %}
						<a href="{{ path('admin_dashboard') }}" target="_blank" class="flex items-center gap-3 px-4 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
							<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
							</svg>
							{{ 'auth.admin_panel'|trans }}
						</a>
						{% endif %}
						<div class="border-t border-gray-200 dark:border-gray-700 my-2"></div>
						<a href="{{ path('app_logout') }}" class="flex items-center gap-3 px-4 py-2 text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/20">
							<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
							</svg>
							{{ 'auth.logout'|trans }}
						</a>
					</div>
				</div>
				{% else %}
				<a href="{{ path('app_login') }}" class="text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-gray-100 px-4 py-2 font-medium">{{ 'auth.login'|trans }}</a>
				<a href="{{ path('app_register') }}" class="inline-flex items-center px-4 py-2 bg-orange-600 text-white rounded-md hover:bg-orange-700 transition">{{ 'auth.register'|trans }}</a>
				{% endif %}
			</div>
		</div>
	</div>
