{# 
    Блок "Смотрите также" 
    Параметры:
    - title: заголовок блока
    - videos: массив видео (опционально)
    - categories: массив категорий (опционально)
    - models: массив моделей (опционально)
    - tags: массив тегов (опционально)
    - class: дополнительные CSS классы
#}

{% if videos|length > 0 or categories|default([])|length > 0 or models|default([])|length > 0 or tags|default([])|length > 0 %}
<div class="see-also-block {{ class|default('') }}">
    <h3 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
        <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        {{ title|default('Смотрите также') }}
    </h3>

    <div class="space-y-6">
        {# Популярные видео #}
        {% if videos|length > 0 %}
        <div class="see-also-videos">
            <h4 class="text-lg font-medium text-gray-800 mb-3">Популярные видео</h4>
            <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-4">
                {% for video in videos %}
                    {% include 'video/_card.html.twig' with {'video': video} %}
                {% endfor %}
            </div>
        </div>
        {% endif %}

        {# Связанные категории #}
        {% if categories|default([])|length > 0 %}
        <div class="see-also-categories">
            <h4 class="text-lg font-medium text-gray-800 mb-3">Связанные категории</h4>
            <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-3">
                {% for category in categories %}
                <a href="{{ path('app_category_show', {slug: category.slug}) }}" 
                   class="block bg-white rounded-lg shadow-sm border border-gray-200 p-4 hover:shadow-md hover:border-blue-300 transition-all">
                    <div class="text-center">
                        {% if category.poster %}
                        <div class="w-12 h-12 mx-auto mb-2 rounded-lg overflow-hidden">
                            {{ lazy_img('categories/' ~ category.poster, category.name, 'w-full h-full object-cover') }}
                        </div>
                        {% else %}
                        <div class="w-12 h-12 mx-auto mb-2 bg-blue-100 rounded-lg flex items-center justify-center">
                            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                            </svg>
                        </div>
                        {% endif %}
                        <h5 class="font-medium text-gray-900 text-sm">{{ category.name }}</h5>
                        <p class="text-xs text-gray-500 mt-1">{{ category.videosCount }} {{ 'video.videos_count'|trans }}</p>
                    </div>
                </a>
                {% endfor %}
            </div>
        </div>
        {% endif %}

        {# Связанные модели #}
        {% if models|default([])|length > 0 %}
        <div class="see-also-models">
            <h4 class="text-lg font-medium text-gray-800 mb-3">Популярные модели</h4>
            <div class="grid grid-cols-2 sm:grid-cols-4 lg:grid-cols-6 gap-4">
                {% for model in models %}
                <a href="{{ path('app_model_show', {slug: model.slug}) }}" 
                   class="block bg-white rounded-lg shadow-sm border border-gray-200 p-3 hover:shadow-md hover:border-purple-300 transition-all">
                    <div class="text-center">
                        <div class="w-16 h-16 mx-auto mb-2 rounded-full overflow-hidden bg-gray-100">
                            {% if model.avatar %}
                                {{ lazy_img('avatars/' ~ model.avatar, model.displayName, 'w-full h-full object-cover') }}
                            {% else %}
                                <div class="w-full h-full flex items-center justify-center text-gray-400">
                                    <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                                    </svg>
                                </div>
                            {% endif %}
                        </div>
                        <h5 class="font-medium text-gray-900 text-sm line-clamp-1">{{ model.displayName }}</h5>
                        <p class="text-xs text-gray-500 mt-1">{{ model.videosCount }} {{ 'video.videos_count'|trans }}</p>
                        {% if model.isVerified %}
                        <span class="inline-block mt-1">
                            <svg class="w-3 h-3 text-blue-500" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                        </span>
                        {% endif %}
                    </div>
                </a>
                {% endfor %}
            </div>
        </div>
        {% endif %}

        {# Связанные теги #}
        {% if tags|default([])|length > 0 %}
        <div class="see-also-tags">
            <h4 class="text-lg font-medium text-gray-800 mb-3">Похожие теги</h4>
            <div class="flex flex-wrap gap-2">
                {% for tag in tags %}
                <a href="{{ path('app_tag_show', {slug: tag.slug}) }}" 
                   class="inline-flex items-center px-3 py-1.5 bg-gray-100 hover:bg-blue-100 text-gray-700 hover:text-blue-700 rounded-full text-sm font-medium transition-colors">
                    <svg class="w-3 h-3 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                    </svg>
                    {{ tag.name }}
                    <span class="ml-1.5 text-xs text-gray-500">({{ tag.usageCount }})</span>
                </a>
                {% endfor %}
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endif %}