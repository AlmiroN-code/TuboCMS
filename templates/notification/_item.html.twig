<div class="flex items-start gap-4 p-4 rounded-md {{ notification.isRead ? 'bg-gray-800' : 'bg-gray-700' }}">
    <div class="flex-shrink-0">
        {% if notification.type == 'new_video' %}
            <div class="w-10 h-10 bg-red-600 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                </svg>
            </div>
        {% elseif notification.type == 'comment_reply' %}
            <div class="w-10 h-10 bg-blue-600 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                </svg>
            </div>
        {% elseif notification.type == 'mention' %}
            <div class="w-10 h-10 bg-purple-600 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path>
                </svg>
            </div>
        {% elseif notification.type == 'new_subscriber' %}
            <div class="w-10 h-10 bg-green-600 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                </svg>
            </div>
        {% endif %}
    </div>
    
    <div class="flex-grow">
        {% if notification.type == 'new_video' %}
            <p class="text-white">
                <span class="font-semibold">{{ notification.data.authorName }}</span>
                {{ 'notification.new_video_text'|trans }}
            </p>
            <a href="{{ path('video_detail', {slug: notification.data.videoId}) }}" class="text-red-500 hover:text-red-400 text-sm">
                {{ notification.data.videoTitle }}
            </a>
        {% elseif notification.type == 'comment_reply' %}
            <p class="text-white">
                <span class="font-semibold">{{ notification.data.fromUserName }}</span>
                {{ 'notification.reply_text'|trans }}
            </p>
            <p class="text-gray-400 text-sm mt-1">{{ notification.data.commentPreview }}</p>
        {% elseif notification.type == 'mention' %}
            <p class="text-white">
                <span class="font-semibold">{{ notification.data.fromUserName }}</span>
                {{ 'notification.mention_text'|trans }}
            </p>
            <p class="text-gray-400 text-sm mt-1">{{ notification.data.commentPreview }}</p>
        {% elseif notification.type == 'new_subscriber' %}
            <p class="text-white">
                <span class="font-semibold">{{ notification.data.subscriberName }}</span>
                {{ 'notification.subscriber_text'|trans }}
            </p>
        {% endif %}
        
        <p class="text-gray-500 text-xs mt-2">{{ notification.createdAt|date('d.m.Y H:i') }}</p>
    </div>

    {% if not notification.isRead %}
        <form action="{{ path('app_notification_mark_read', {id: notification.id}) }}" method="post">
            <button type="submit" class="text-gray-400 hover:text-white">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
            </button>
        </form>
    {% endif %}
</div>
