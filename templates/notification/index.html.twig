{% extends 'base.html.twig' %}

{% set breadcrumbs = [
    {'label': 'breadcrumb.home'|trans, 'url': path('app_home')},
    {'label': 'notification.title'|trans, 'url': ''}
] %}

{% block title %}{{ 'notification.title'|trans }} - {{ setting('site_name') }}{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8 max-w-3xl">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold text-white">{{ 'notification.title'|trans }}</h1>
        {% if notifications is not empty %}
            <form action="{{ path('app_notification_mark_all_read') }}" method="post">
                <button type="submit" class="text-gray-400 hover:text-white text-sm">
                    {{ 'notification.mark_all_read'|trans }}
                </button>
            </form>
        {% endif %}
    </div>

    {% if notifications is empty %}
        <div class="text-center py-12">
            <p class="text-gray-400">{{ 'notification.empty'|trans }}</p>
        </div>
    {% else %}
        <div class="space-y-2">
            {% for notification in notifications %}
                {% include 'notification/_item.html.twig' %}
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
