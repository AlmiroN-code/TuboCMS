{% extends 'base.html.twig' %}

{% block title %}{{ seo_title|default('live.title'|trans) }}{% endblock %}

{% block meta_description %}
    {% if seo_description %}
        <meta name="description" content="{{ seo_description }}">
    {% endif %}
{% endblock %}

{% block meta_keywords %}
    {% if seo_keywords %}
        <meta name="keywords" content="{{ seo_keywords }}">
    {% endif %}
{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="mb-8">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-bold">{{ 'live.title'|trans }}</h1>
            {% if app.user %}
                <a href="{{ path('live_create') }}" class="inline-flex items-center px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 transition-colors">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                    </svg>
                    {{ 'live.create_new'|trans }}
                </a>
            {% endif %}
        </div>

        {% if liveCount > 0 %}
            <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
                <div class="flex items-center">
                    <span class="flex h-3 w-3 relative mr-3">
                        <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-red-400 opacity-75"></span>
                        <span class="relative inline-flex rounded-full h-3 w-3 bg-red-500"></span>
                    </span>
                    <span class="text-red-800 font-medium">{{ liveCount }} {{ 'live.list.active_streams'|trans }}</span>
                </div>
            </div>
        {% endif %}
    </div>

    {% if liveStreams|length > 0 %}
        <section class="mb-12">
            <h2 class="text-2xl font-bold mb-6">{{ 'live.list.now_live'|trans }}</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for stream in liveStreams %}
                    <a href="{{ path('live_show', {slug: stream.slug}) }}" class="group">
                        <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow">
                            <div class="relative aspect-video bg-gray-900">
                                {% if stream.thumbnail %}
                                    <img src="{{ asset(stream.thumbnail) }}" alt="{{ stream.title }}" class="w-full h-full object-cover">
                                {% else %}
                                    <div class="w-full h-full flex items-center justify-center">
                                        <svg class="w-16 h-16 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                                        </svg>
                                    </div>
                                {% endif %}
                                <div class="absolute top-2 left-2 bg-red-600 text-white px-2 py-1 rounded text-sm font-bold flex items-center">
                                    <span class="w-2 h-2 bg-white rounded-full mr-2 animate-pulse"></span>
                                    LIVE
                                </div>
                                <div class="absolute bottom-2 right-2 bg-black bg-opacity-75 text-white px-2 py-1 rounded text-sm">
                                    üëÅ {{ stream.viewersCount }}
                                </div>
                            </div>
                            <div class="p-4">
                                <h3 class="font-bold text-lg mb-2 group-hover:text-blue-600 transition-colors line-clamp-2">{{ stream.title }}</h3>
                                <div class="flex items-center text-sm text-gray-600">
                                    <span class="font-medium">{{ stream.streamer.username }}</span>
                                    {% if stream.streamer.isVerified %}
                                        <svg class="w-4 h-4 ml-1 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                                        </svg>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </a>
                {% endfor %}
            </div>
        </section>
    {% else %}
        <div class="text-center py-12">
            <svg class="w-24 h-24 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
            <h3 class="text-xl font-medium text-gray-700 mb-2">{{ 'live.list.no_active'|trans }}</h3>
            <p class="text-gray-500">{{ 'live.list.no_active_desc'|trans }}</p>
        </div>
    {% endif %}

    {% if scheduledStreams|length > 0 %}
        <section>
            <h2 class="text-2xl font-bold mb-6">{{ 'live.list.scheduled_streams'|trans }}</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for stream in scheduledStreams %}
                    <div class="bg-white rounded-lg shadow-md p-4">
                        <h3 class="font-bold text-lg mb-2">{{ stream.title }}</h3>
                        <div class="text-sm text-gray-600 mb-2">
                            <span class="font-medium">{{ stream.streamer.username }}</span>
                        </div>
                        {% if stream.scheduledAt %}
                            <div class="text-sm text-gray-500">
                                üìÖ {{ stream.scheduledAt|date('d.m.Y H:i') }}
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        </section>
    {% endif %}
</div>
{% endblock %}
