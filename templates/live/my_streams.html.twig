{% extends 'base.html.twig' %}

{% block title %}{{ 'live.my_streams'|trans }}{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold">{{ 'live.my_streams'|trans }}</h1>
        <a href="{{ path('live_create') }}" class="inline-flex items-center px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 transition-colors">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            {{ 'live.create_new'|trans }}
        </a>
    </div>

    {% if streams|length > 0 %}
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ 'live.table.name'|trans }}</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ 'live.table.status'|trans }}</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ 'live.table.viewers'|trans }}</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ 'live.table.date'|trans }}</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">{{ 'live.table.actions'|trans }}</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for stream in streams %}
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4">
                                <div class="flex items-center">
                                    <div>
                                        <div class="text-sm font-medium text-gray-900">{{ stream.title }}</div>
                                        {% if stream.channel %}
                                            <div class="text-sm text-gray-500">{{ stream.channel.name }}</div>
                                        {% endif %}
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                    {% if stream.status == 'live' %}bg-red-100 text-red-800
                                    {% elseif stream.status == 'scheduled' %}bg-blue-100 text-blue-800
                                    {% elseif stream.status == 'ended' %}bg-gray-100 text-gray-800
                                    {% else %}bg-yellow-100 text-yellow-800{% endif %}">
                                    {% if stream.status == 'live' %}
                                        <span class="w-2 h-2 bg-red-500 rounded-full mr-1 animate-pulse"></span>
                                        {{ 'live.status.live'|trans }}
                                    {% elseif stream.status == 'scheduled' %}
                                        {{ 'live.status.scheduled'|trans }}
                                    {% elseif stream.status == 'ended' %}
                                        {{ 'live.status.ended'|trans }}
                                    {% else %}
                                        {{ stream.status }}
                                    {% endif %}
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                <div>{{ 'live.manage_stream.viewers_now'|trans }}: {{ stream.viewersCount }}</div>
                                <div class="text-xs text-gray-400">{{ 'live.manage_stream.viewers_peak'|trans }}: {{ stream.peakViewersCount }}</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                {% if stream.startedAt %}
                                    {{ stream.startedAt|date('d.m.Y H:i') }}
                                {% elseif stream.scheduledAt %}
                                    {{ stream.scheduledAt|date('d.m.Y H:i') }}
                                {% else %}
                                    {{ stream.createdAt|date('d.m.Y H:i') }}
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <div class="flex justify-end gap-2">
                                    {% if stream.status == 'live' or stream.status == 'scheduled' %}
                                        <a href="{{ path('live_manage', {id: stream.id}) }}" class="text-blue-600 hover:text-blue-900">
                                            {{ 'live.manage'|trans }}
                                        </a>
                                    {% endif %}
                                    <a href="{{ path('live_show', {slug: stream.slug}) }}" class="text-gray-600 hover:text-gray-900">
                                        {{ 'common.view'|trans }}
                                    </a>
                                    {% if stream.status != 'live' %}
                                        <form method="post" action="{{ path('live_delete', {id: stream.id}) }}" onsubmit="return confirm('{{ 'live.table.delete_confirm'|trans }}');" class="inline">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ stream.id) }}">
                                            <button type="submit" class="text-red-600 hover:text-red-900">
                                                {{ 'live.delete'|trans }}
                                            </button>
                                        </form>
                                    {% endif %}
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="bg-white rounded-lg shadow-md p-12 text-center">
            <svg class="w-24 h-24 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
            <h3 class="text-xl font-medium text-gray-700 mb-2">{{ 'live.list.no_streams'|trans }}</h3>
            <p class="text-gray-500 mb-4">{{ 'live.list.no_streams_desc'|trans }}</p>
            <a href="{{ path('live_create') }}" class="inline-flex items-center px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 transition-colors">
                {{ 'live.create_new'|trans }}
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}
