{% extends 'base.html.twig' %}

{% set breadcrumbs = [
    {'label': 'breadcrumb.home'|trans, 'url': path('app_home')},
    {'label': 'history.title'|trans, 'url': ''}
] %}

{% block title %}{{ 'history.title'|trans }} - {{ setting('site_name') }}{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl text-gray-900 dark:text-gray-100">{{ 'history.title'|trans }}</h1>

        {% if history is not empty %}
            <button onclick="clearHistory()" class="text-gray-400 hover:text-red-500 text-sm">
                {{ 'history.clear_all'|trans }}
            </button>
        {% endif %}
    </div>

    {% if history is empty %}
        <div class="text-center py-12">
            <p class="text-gray-400">{{ 'history.empty'|trans }}</p>
        </div>
    {% else %}
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-6 gap-4">
            {% for entry in history %}
                {% set video = entry.video %}
                <div class="relative group">
                    {% include 'video/_card.html.twig' with {video: video} %}
                    <div class="absolute top-2 right-2 opacity-0 group-hover:opacity-100 transition">
                        <button onclick="removeFromHistory({{ video.id }})" class="bg-black/70 text-white p-1 rounded hover:bg-red-600">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                        </button>
                    </div>
                    {% if entry.watchProgress > 0 %}
                        <div class="absolute bottom-0 left-0 right-0 h-1 bg-gray-700">
                            <div class="h-full bg-red-600" style="width: {{ entry.watchProgress }}%"></div>
                        </div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>

        {% if totalPages > 1 %}
            <div class="flex justify-center mt-8 gap-2">
                {% for i in 1..totalPages %}
                    <a href="{{ path('app_history_index', {page: i}) }}" 
                       class="px-3 py-1 rounded {{ currentPage == i ? 'bg-red-600 text-white' : 'bg-gray-700 text-gray-300 hover:bg-gray-600' }}">
                        {{ i }}
                    </a>
                {% endfor %}
            </div>
        {% endif %}
    {% endif %}
</div>

<script>
function removeFromHistory(videoId) {
    fetch(`/history/${videoId}`, {method: 'DELETE', headers: {'Accept': 'application/json'}})
        .then(() => location.reload());
}
function clearHistory() {
    if (confirm('{{ 'history.confirm_clear'|trans }}')) {
        fetch('/history', {method: 'DELETE', headers: {'Accept': 'application/json'}})
            .then(() => location.reload());
    }
}
</script>
{% endblock %}
