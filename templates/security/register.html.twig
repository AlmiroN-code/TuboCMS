{% extends 'base.html.twig' %}

{% block title %}{{ 'auth.register_page.title'|trans }}{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-gray-50 dark:bg-gray-900 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div>
            <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900 dark:text-white">
                {{ 'auth.register_page.heading'|trans }}
            </h2>
        </div>

        {{ form_start(registrationForm, {'attr': {'class': 'mt-8 space-y-6'}}) }}
            <div class="rounded-md shadow-sm space-y-4">
                <div>
                    {{ form_label(registrationForm.username, 'auth.register_page.username'|trans, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'}}) }}
                    {{ form_widget(registrationForm.username, {'attr': {'class': 'mt-1 appearance-none block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 dark:bg-gray-800 dark:text-white rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-orange-500 focus:border-orange-500 sm:text-sm'}}) }}
                    {{ form_errors(registrationForm.username) }}
                </div>

                <div>
                    {{ form_label(registrationForm.email, 'auth.register_page.email'|trans, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'}}) }}
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'mt-1 appearance-none block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 dark:bg-gray-800 dark:text-white rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-orange-500 focus:border-orange-500 sm:text-sm'}}) }}
                    {{ form_errors(registrationForm.email) }}
                </div>

                <div>
                    {{ form_label(registrationForm.plainPassword, 'auth.register_page.password'|trans, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'}}) }}
                    <div {{ stimulus_controller('symfony/ux-toggle-password/toggle-password') }}>
                        {{ form_widget(registrationForm.plainPassword, {'attr': {
                            'class': 'mt-1 appearance-none block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 dark:bg-gray-800 dark:text-white rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-orange-500 focus:border-orange-500 sm:text-sm pr-10',
                            'data-symfony--ux-toggle-password--toggle-password-target': 'input'
                        }}) }}
                        <button type="button" 
                                data-symfony--ux-toggle-password--toggle-password-target="toggle"
                                data-action="symfony--ux-toggle-password--toggle-password#toggle"
                                class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-400 hover:text-gray-600 dark:hover:text-gray-300">
                            <span data-symfony--ux-toggle-password--toggle-password-target="visibleIcon" class="hidden">üëÅ</span>
                            <span data-symfony--ux-toggle-password--toggle-password-target="hiddenIcon">üëÅ‚Äçüó®</span>
                        </button>
                    </div>
                    {{ form_errors(registrationForm.plainPassword) }}
                </div>
            </div>

            <div>
                <button type="submit" 
                        class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-orange-600 hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500">
                    {{ 'auth.register_page.submit'|trans }}
                </button>
            </div>

            <div class="text-center">
                <a href="{{ path('app_login') }}" class="text-orange-600 hover:text-orange-700">
                    {{ 'auth.register_page.have_account'|trans }} {{ 'auth.register_page.sign_in_link'|trans }}
                </a>
            </div>
        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}
